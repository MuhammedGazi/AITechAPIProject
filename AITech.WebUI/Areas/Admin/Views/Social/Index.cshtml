@model List<ResultSocialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="ai-container">
    <div class="ai-header">
        <div class="ai-header-content">
            <div class="ai-icon-wrapper">
                <svg class="ai-header-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" stroke-width="2"/>
                </svg>
            </div>
            <div>
                <h1 class="ai-title">Sosyal Medya</h1>
                <p class="ai-subtitle">Sosyal medya hesaplarınızı yönetin</p>
            </div>
        </div>
        <a asp-action="Create" asp-controller="Social" class="ai-btn-primary">
            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M12 5v14m7-7H5" stroke-width="2.5" stroke-linecap="round"/>
            </svg>
            Yeni Hesap Ekle
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="ai-stats-grid">
            <div class="ai-stat-card stat-primary">
                <div class="stat-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" stroke-width="2"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@Model.Count</div>
                    <div class="stat-label">Toplam Hesap</div>
                </div>
            </div>

            <div class="ai-stat-card stat-success">
                <div class="stat-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke-width="2"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-value">Aktif</div>
                    <div class="stat-label">Durum</div>
                </div>
            </div>

            <div class="ai-stat-card stat-info">
                <div class="stat-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" stroke-width="2"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-value">Bağlı</div>
                    <div class="stat-label">Sosyal Ağlar</div>
                </div>
            </div>
        </div>

        <div class="ai-social-grid">
            @foreach (var item in Model)
            {
                <div class="ai-social-card">
                    <div class="social-icon-wrapper">
                        <i class="@item.Icon social-icon"></i>
                    </div>
                    
                    <div class="social-content">
                        <h3 class="social-name">@item.Name</h3>
                        <div class="social-url">
                            <svg class="url-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" stroke-width="2"/>
                            </svg>
                            <a href="@item.Url" target="_blank" class="url-link">@item.Url</a>
                        </div>
                        <div class="social-badge">#@item.Id</div>
                    </div>

                    <div class="social-actions">
                        <a href="@item.Url" target="_blank" class="ai-btn ai-btn-visit">
                            <svg class="btn-icon-sm" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" stroke-width="2"/>
                            </svg>
                            Ziyaret Et
                        </a>
                        <a asp-action="Update" asp-controller="Social" asp-route-id="@item.Id" class="ai-btn ai-btn-edit">
                            <svg class="btn-icon-sm" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7" stroke-width="2"/>
                                <path d="M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z" stroke-width="2"/>
                            </svg>
                            Düzenle
                        </a>
                        <a asp-action="Delete" asp-controller="Social" asp-route-id="@item.Id" class="ai-btn ai-btn-delete">
                            <svg class="btn-icon-sm" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" stroke-width="2"/>
                            </svg>
                            Sil
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="ai-empty-state">
            <div class="empty-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" stroke-width="2"/>
                </svg>
            </div>
            <h3>Henüz Sosyal Medya Hesabı Yok</h3>
            <p>Yeni hesap eklemek için yukarıdaki "Yeni Hesap Ekle" butonuna tıklayın.</p>
        </div>
    }
</div>

<style>
    .ai-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #0a0e27 0%, #1a1f3a 100%);
        margin: -30px -45px -100px -45px;
        padding: 60px 40px 100px 40px;
        position: relative;
        overflow: hidden;
        border-radius: 30px 30px 0 0;
    }

    .ai-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: 
            radial-gradient(circle at 20% 30%, rgba(59, 130, 246, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 80% 70%, rgba(139, 92, 246, 0.1) 0%, transparent 50%);
        animation: pulse 8s ease-in-out infinite;
        pointer-events: none;
    }

    @@keyframes pulse {
        0%, 100% { opacity: 0.5; transform: scale(1); }
        50% { opacity: 0.8; transform: scale(1.1); }
    }

    .ai-header {
        position: relative;
        z-index: 10;
        margin-bottom: 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
    }

    .ai-header-content {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .ai-icon-wrapper {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 30px rgba(59, 130, 246, 0.4);
    }

    .ai-header-icon {
        width: 36px;
        height: 36px;
        color: white;
    }

    .ai-title {
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
    }

    .ai-subtitle {
        color: rgba(255, 255, 255, 0.6);
        margin: 5px 0 0 0;
        font-size: 1rem;
    }

    .ai-btn-primary {
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        border: none;
        padding: 14px 28px;
        border-radius: 12px;
        color: white;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(59, 130, 246, 0.4);
    }

    .ai-btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(59, 130, 246, 0.6);
        color: white;
    }

    .btn-icon {
        width: 20px;
        height: 20px;
    }

    .ai-stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
        position: relative;
        z-index: 10;
    }

    .ai-stat-card {
        background: rgba(26, 31, 58, 0.6);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(59, 130, 246, 0.2);
        border-radius: 16px;
        padding: 25px;
        display: flex;
        align-items: center;
        gap: 20px;
        transition: all 0.3s ease;
    }

    .ai-stat-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 30px rgba(59, 130, 246, 0.2);
    }

    .stat-primary:hover {
        border-color: rgba(59, 130, 246, 0.4);
    }

    .stat-success:hover {
        border-color: rgba(34, 197, 94, 0.4);
    }

    .stat-info:hover {
        border-color: rgba(139, 92, 246, 0.4);
    }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .stat-primary .stat-icon {
        background: linear-gradient(135deg, #3b82f6, #2563eb);
    }

    .stat-success .stat-icon {
        background: linear-gradient(135deg, #22c55e, #16a34a);
    }

    .stat-info .stat-icon {
        background: linear-gradient(135deg, #8b5cf6, #7c3aed);
    }

    .stat-icon svg {
        width: 28px;
        height: 28px;
        color: white;
    }

    .stat-content {
        flex: 1;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: white;
        margin-bottom: 5px;
    }

    .stat-label {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.6);
    }

    .ai-social-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
        gap: 25px;
        position: relative;
        z-index: 10;
    }

    .ai-social-card {
        background: rgba(26, 31, 58, 0.6);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(59, 130, 246, 0.2);
        border-radius: 20px;
        padding: 30px;
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .ai-social-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
        opacity: 0;
        transition: opacity 0.4s ease;
    }

    .ai-social-card:hover {
        transform: translateY(-8px);
        border-color: rgba(59, 130, 246, 0.5);
        box-shadow: 0 20px 60px rgba(59, 130, 246, 0.3);
    }

    .ai-social-card:hover::before {
        opacity: 1;
    }

    .social-icon-wrapper {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 25px rgba(59, 130, 246, 0.3);
        position: relative;
        z-index: 2;
    }

    .social-icon {
        font-size: 2.5rem;
        color: white;
    }

    .social-content {
        flex: 1;
        position: relative;
        z-index: 2;
    }

    .social-name {
        color: white;
        font-size: 1.5rem;
        font-weight: 700;
        margin: 0 0 15px 0;
    }

    .social-url {
        display: flex;
        align-items: center;
        gap: 10px;
        background: rgba(10, 14, 39, 0.4);
        padding: 12px 16px;
        border-radius: 10px;
        margin-bottom: 15px;
        border-left: 3px solid #3b82f6;
    }

    .url-icon {
        width: 18px;
        height: 18px;
        color: #3b82f6;
        flex-shrink: 0;
    }

    .url-link {
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        font-size: 0.9rem;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        transition: color 0.3s ease;
    }

    .url-link:hover {
        color: #3b82f6;
    }

    .social-badge {
        display: inline-block;
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        color: white;
        padding: 6px 16px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 0.85rem;
    }

    .social-actions {
        display: flex;
        gap: 10px;
        position: relative;
        z-index: 2;
    }

    .ai-btn {
        padding: 10px 18px;
        border-radius: 10px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        font-size: 0.85rem;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        flex: 1;
        justify-content: center;
    }

    .btn-icon-sm {
        width: 16px;
        height: 16px;
    }

    .ai-btn-visit {
        background: linear-gradient(135deg, #8b5cf6, #7c3aed);
        color: white;
    }

    .ai-btn-visit:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(139, 92, 246, 0.4);
        color: white;
    }

    .ai-btn-edit {
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        color: white;
    }

    .ai-btn-edit:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
        color: white;
    }

    .ai-btn-delete {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        color: white;
    }

    .ai-btn-delete:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(239, 68, 68, 0.4);
        color: white;
    }

    .ai-empty-state {
        text-align: center;
        padding: 80px 20px;
        position: relative;
        z-index: 10;
    }

    .empty-icon {
        width: 120px;
        height: 120px;
        margin: 0 auto 30px;
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(139, 92, 246, 0.2));
        border-radius: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .empty-icon svg {
        width: 60px;
        height: 60px;
        color: #3b82f6;
    }

    .ai-empty-state h3 {
        color: white;
        font-size: 1.8rem;
        margin-bottom: 15px;
    }

    .ai-empty-state p {
        color: rgba(255, 255, 255, 0.6);
        font-size: 1.1rem;
    }

    @@media (max-width: 768px) {
        .ai-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .ai-header-content {
            flex-direction: column;
            align-items: flex-start;
        }

        .ai-title {
            font-size: 2rem;
        }

        .ai-social-grid {
            grid-template-columns: 1fr;
        }

        .social-actions {
            flex-direction: column;
        }
    }
</style>
