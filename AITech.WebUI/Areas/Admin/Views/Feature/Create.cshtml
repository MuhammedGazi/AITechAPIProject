@model CreateFeatureDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="ai-container">
    <div class="ai-header">
        <div class="ai-header-content">
            <div class="ai-icon-wrapper">
                <svg class="ai-header-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M12 4v16m8-8H4" stroke-width="2.5" stroke-linecap="round"/>
                </svg>
            </div>
            <div>
                <h1 class="ai-title">Yeni Özellik Ekle</h1>
                <div class="ai-breadcrumb">
                    <a asp-action="Index" asp-controller="Feature">
                        <svg class="breadcrumb-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" stroke-width="2"/>
                        </svg>
                        Özellikler
                    </a>
                    <span>/</span>
                    <span>Yeni Özellik</span>
                </div>
            </div>
        </div>
    </div>

    <div class="ai-form-container">
        <div class="form-header">
            <div class="form-header-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M13 10V3L4 14h7v7l9-11h-7z" stroke-width="2"/>
                </svg>
            </div>
            <div>
                <h2 class="form-title">Özellik Bilgileri</h2>
                <p class="form-subtitle">Yeni bir özellik tanımlayın</p>
            </div>
        </div>

        <form asp-action="Create" asp-controller="Feature" method="post">
            <div class="ai-form-group">
                <label asp-for="Title" class="ai-form-label">
                    <svg class="label-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" stroke-width="2"/>
                    </svg>
                    Başlık
                </label>
                <input asp-for="Title" class="ai-form-input" placeholder="Örn: Yapay Zeka Teknolojisi" />
                <span class="ai-form-helper">
                    <svg class="helper-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <circle cx="12" cy="12" r="10" stroke-width="2"/>
                        <path d="M12 16v-4m0-4h.01" stroke-width="2"/>
                    </svg>
                    Özelliğin ana başlığını yazın
                </span>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="ai-form-group">
                <label asp-for="Icon" class="ai-form-label">
                    <svg class="label-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" stroke-width="2"/>
                    </svg>
                    İkon Sınıfı
                </label>
                <div class="icon-input-group">
                    <input asp-for="Icon" class="ai-form-input icon-input" placeholder="fa-solid fa-bolt" id="iconInput" />
                    <div class="icon-preview" id="iconPreview">
                        <i class="fa-solid fa-question"></i>
                    </div>
                </div>
                <span class="ai-form-helper">
                    <svg class="helper-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <circle cx="12" cy="12" r="10" stroke-width="2"/>
                        <path d="M12 16v-4m0-4h.01" stroke-width="2"/>
                    </svg>
                    Font Awesome ikon sınıfını girin (Örn: fa-solid fa-rocket, fa-solid fa-star)
                </span>
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>

            <div class="icon-examples">
                <div class="examples-title">
                    <svg class="examples-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" stroke-width="2"/>
                    </svg>
                    Popüler İkon Örnekleri:
                </div>
                <div class="icon-examples-grid">
                    <button type="button" class="icon-example" data-icon="fa-solid fa-bolt">
                        <i class="fa-solid fa-bolt"></i>
                        <span>fa-solid fa-bolt</span>
                    </button>
                    <button type="button" class="icon-example" data-icon="fa-solid fa-rocket">
                        <i class="fa-solid fa-rocket"></i>
                        <span>fa-solid fa-rocket</span>
                    </button>
                    <button type="button" class="icon-example" data-icon="fa-solid fa-star">
                        <i class="fa-solid fa-star"></i>
                        <span>fa-solid fa-star</span>
                    </button>
                    <button type="button" class="icon-example" data-icon="fa-solid fa-heart">
                        <i class="fa-solid fa-heart"></i>
                        <span>fa-solid fa-heart</span>
                    </button>
                    <button type="button" class="icon-example" data-icon="fa-solid fa-shield">
                        <i class="fa-solid fa-shield"></i>
                        <span>fa-solid fa-shield</span>
                    </button>
                    <button type="button" class="icon-example" data-icon="fa-solid fa-chart-line">
                        <i class="fa-solid fa-chart-line"></i>
                        <span>fa-solid fa-chart-line</span>
                    </button>
                </div>
            </div>

            <div class="ai-form-group">
                <label asp-for="Description" class="ai-form-label">
                    <svg class="label-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M4 6h16M4 12h16M4 18h7" stroke-width="2" stroke-linecap="round"/>
                    </svg>
                    Açıklama
                </label>
                <textarea asp-for="Description" class="ai-form-textarea" placeholder="Özelliğin detaylı açıklamasını yazın..." rows="5"></textarea>
                <span class="ai-form-helper">
                    <svg class="helper-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <circle cx="12" cy="12" r="10" stroke-width="2"/>
                        <path d="M12 16v-4m0-4h.01" stroke-width="2"/>
                    </svg>
                    Bu özelliğin ne işe yaradığını detaylı açıklayın
                </span>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-info-box">
                <svg class="info-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke-width="2"/>
                </svg>
                <div>
                    <strong>İpucu:</strong> İkonlar için <a href="https://fontawesome.com/icons" target="_blank" style="color: #f97316;">Font Awesome</a> sitesini ziyaret edebilirsiniz. İkon seçerken "fa-solid", "fa-regular" veya "fa-brands" öneklerini kullanmayı unutmayın.
                </div>
            </div>

            <div class="ai-form-actions">
                <button type="submit" class="ai-btn ai-btn-submit">
                    <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M5 13l4 4L19 7" stroke-width="2.5" stroke-linecap="round"/>
                    </svg>
                    Özelliği Kaydet
                </button>
                <a asp-action="Index" asp-controller="Feature" class="ai-btn ai-btn-cancel">
                    <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M6 18L18 6M6 6l12 12" stroke-width="2"/>
                    </svg>
                    İptal
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Icon preview functionality
        const iconInput = document.getElementById('iconInput');
        const iconPreview = document.getElementById('iconPreview');

        if (iconInput && iconPreview) {
            iconInput.addEventListener('input', function() {
                const iconClass = this.value.trim();
                if (iconClass) {
                    iconPreview.innerHTML = `<i class="${iconClass}"></i>`;
                } else {
                    iconPreview.innerHTML = '<i class="fa-solid fa-question"></i>';
                }
            });

            // Icon example buttons
            document.querySelectorAll('.icon-example').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    const iconClass = this.getAttribute('data-icon');
                    iconInput.value = iconClass;
                    iconPreview.innerHTML = `<i class="${iconClass}"></i>`;
                    
                    // Visual feedback
                    document.querySelectorAll('.icon-example').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                });
            });
        }
    </script>
}

<style>
    .ai-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #0a0e27 0%, #1a1f3a 100%);
        margin: -30px -45px -100px -45px;
        padding: 60px 40px 100px 40px;
        position: relative;
        overflow: hidden;
        border-radius: 30px 30px 0 0;
    }

    .ai-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: 
            radial-gradient(circle at 20% 30%, rgba(249, 115, 22, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 80% 70%, rgba(234, 88, 12, 0.1) 0%, transparent 50%);
        animation: pulse 8s ease-in-out infinite;
        pointer-events: none;
    }

    @@keyframes pulse {
        0%, 100% { opacity: 0.5; transform: scale(1); }
        50% { opacity: 0.8; transform: scale(1.1); }
    }

    .ai-header {
        position: relative;
        z-index: 10;
        margin-bottom: 40px;
    }

    .ai-header-content {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .ai-icon-wrapper {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 30px rgba(34, 197, 94, 0.4);
    }

    .ai-header-icon {
        width: 36px;
        height: 36px;
        color: white;
    }

    .ai-title {
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
    }

    .ai-breadcrumb {
        display: flex;
        gap: 8px;
        align-items: center;
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.9rem;
        margin-top: 8px;
    }

    .ai-breadcrumb a {
        color: #22c55e;
        text-decoration: none;
        transition: color 0.3s ease;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .ai-breadcrumb a:hover {
        color: #16a34a;
    }

    .breadcrumb-icon {
        width: 16px;
        height: 16px;
    }

    .ai-form-container {
        max-width: 900px;
        margin: 0 auto;
        background: rgba(26, 31, 58, 0.6);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(249, 115, 22, 0.2);
        border-radius: 20px;
        padding: 40px;
        position: relative;
        z-index: 10;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    }

    .form-header {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 35px;
        padding-bottom: 25px;
        border-bottom: 1px solid rgba(249, 115, 22, 0.2);
    }

    .form-header-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #f97316, #ea580c);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .form-header-icon svg {
        width: 32px;
        height: 32px;
        color: white;
    }

    .form-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: white;
        margin: 0;
    }

    .form-subtitle {
        color: rgba(255, 255, 255, 0.6);
        margin: 5px 0 0 0;
        font-size: 0.95rem;
    }

    .ai-form-group {
        margin-bottom: 30px;
    }

    .ai-form-label {
        display: flex;
        align-items: center;
        gap: 10px;
        color: #ffffff;
        font-weight: 600;
        margin-bottom: 12px;
        font-size: 1rem;
    }

    .label-icon {
        width: 20px;
        height: 20px;
        color: #f97316;
    }

    .ai-form-input,
    .ai-form-textarea {
        width: 100%;
        padding: 16px 20px;
        background: rgba(10, 14, 39, 0.6);
        border: 2px solid rgba(249, 115, 22, 0.3);
        border-radius: 12px;
        color: #ffffff;
        font-size: 1rem;
        transition: all 0.3s ease;
        outline: none;
        font-family: inherit;
    }

    .ai-form-input:focus,
    .ai-form-textarea:focus {
        border-color: #f97316;
        box-shadow: 0 0 0 4px rgba(249, 115, 22, 0.15);
        background: rgba(10, 14, 39, 0.8);
    }

    .ai-form-textarea {
        resize: vertical;
        min-height: 120px;
        line-height: 1.6;
    }

    .ai-form-input::placeholder,
    .ai-form-textarea::placeholder {
        color: rgba(255, 255, 255, 0.4);
    }

    .icon-input-group {
        display: flex;
        gap: 15px;
        align-items: center;
    }

    .icon-input {
        flex: 1;
    }

    .icon-preview {
        width: 70px;
        height: 58px;
        background: linear-gradient(135deg, rgba(249, 115, 22, 0.2), rgba(234, 88, 12, 0.2));
        border: 2px solid rgba(249, 115, 22, 0.4);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        color: #f97316;
        flex-shrink: 0;
    }

    .icon-examples {
        background: rgba(10, 14, 39, 0.4);
        border: 1px solid rgba(249, 115, 22, 0.2);
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 30px;
    }

    .examples-title {
        display: flex;
        align-items: center;
        gap: 10px;
        color: rgba(255, 255, 255, 0.9);
        font-weight: 600;
        margin-bottom: 15px;
        font-size: 0.95rem;
    }

    .examples-icon {
        width: 20px;
        height: 20px;
        color: #f97316;
    }

    .icon-examples-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 12px;
    }

    .icon-example {
        background: rgba(26, 31, 58, 0.6);
        border: 2px solid rgba(249, 115, 22, 0.3);
        border-radius: 10px;
        padding: 12px;
        display: flex;
        align-items: center;
        gap: 10px;
        color: rgba(255, 255, 255, 0.8);
        font-size: 0.85rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .icon-example i {
        font-size: 1.3rem;
        color: #f97316;
    }

    .icon-example:hover {
        border-color: #f97316;
        background: rgba(249, 115, 22, 0.1);
        transform: translateY(-2px);
    }

    .icon-example.active {
        border-color: #f97316;
        background: rgba(249, 115, 22, 0.2);
        box-shadow: 0 0 0 3px rgba(249, 115, 22, 0.1);
    }

    .ai-form-helper {
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.5);
        margin-top: 8px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .helper-icon {
        width: 16px;
        height: 16px;
    }

    .text-danger {
        color: #ef4444 !important;
        font-size: 0.85rem;
        margin-top: 8px;
        display: block;
    }

    .input-validation-error {
        border-color: #ef4444 !important;
    }

    .form-info-box {
        background: rgba(34, 197, 94, 0.1);
        border: 1px solid rgba(34, 197, 94, 0.3);
        border-radius: 12px;
        padding: 18px;
        display: flex;
        gap: 15px;
        margin-bottom: 30px;
        color: rgba(255, 255, 255, 0.8);
        line-height: 1.6;
    }

    .info-icon {
        width: 24px;
        height: 24px;
        color: #22c55e;
        flex-shrink: 0;
    }

    .ai-form-actions {
        display: flex;
        gap: 15px;
        margin-top: 35px;
        padding-top: 25px;
        border-top: 1px solid rgba(249, 115, 22, 0.2);
    }

    .ai-btn {
        padding: 14px 32px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

    .btn-icon {
        width: 20px;
        height: 20px;
    }

    .ai-btn-submit {
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        color: white;
        flex: 1;
        justify-content: center;
        box-shadow: 0 4px 20px rgba(34, 197, 94, 0.4);
    }

    .ai-btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(34, 197, 94, 0.6);
    }

    .ai-btn-cancel {
        background: rgba(255, 255, 255, 0.1);
        color: white;
        border: 2px solid rgba(255, 255, 255, 0.2);
        justify-content: center;
    }

    .ai-btn-cancel:hover {
        background: rgba(255, 255, 255, 0.15);
        transform: translateY(-2px);
        color: white;
    }

    @@media (max-width: 768px) {
        .ai-form-container {
            padding: 25px;
        }

        .ai-title {
            font-size: 2rem;
        }

        .ai-header-content {
            flex-direction: column;
            align-items: flex-start;
        }

        .form-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .icon-input-group {
            flex-direction: column;
        }

        .icon-preview {
            width: 100%;
            height: 70px;
        }

        .ai-form-actions {
            flex-direction: column;
        }
    }
</style>

