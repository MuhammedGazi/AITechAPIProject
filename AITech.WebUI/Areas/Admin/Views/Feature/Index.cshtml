@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="ai-container">
    <div class="ai-header">
        <div class="ai-header-content">
            <div class="ai-icon-wrapper">
                <svg class="ai-header-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M13 10V3L4 14h7v7l9-11h-7z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
            </div>
            <div>
                <h1 class="ai-title">Özellikler Yönetimi</h1>
                <p class="ai-subtitle">Tüm özellikleri görüntüleyin ve yönetin</p>
            </div>
        </div>
        <a asp-action="Create" asp-controller="Feature" class="ai-btn-primary">
            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M12 5v14m7-7H5" stroke-width="2.5" stroke-linecap="round" />
            </svg>
            Yeni Özellik Ekle
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="ai-stats-grid">
            <div class="ai-stat-card stat-primary">
                <div class="stat-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke-width="2" />
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@Model.Count</div>
                    <div class="stat-label">Toplam Özellik</div>
                </div>
            </div>

            <div class="ai-stat-card stat-success">
                <div class="stat-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M13 10V3L4 14h7v7l9-11h-7z" stroke-width="2" />
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-value">Aktif</div>
                    <div class="stat-label">Durum</div>
                </div>
            </div>

            <div class="ai-stat-card stat-info">
                <div class="stat-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" stroke-width="2" />
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@Model.Count(f => !string.IsNullOrEmpty(f.Icon))</div>
                    <div class="stat-label">İkonlu Özellik</div>
                </div>
            </div>
        </div>

        <div class="ai-features-grid">
            @foreach (var item in Model)
            {
                <div class="ai-feature-card">
                    <div class="feature-card-header">
                        <div class="feature-badge">#@item.Id</div>
                        <div class="feature-status">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <circle cx="12" cy="12" r="10" stroke-width="2" />
                                <path d="M12 6v6l4 2" stroke-width="2" />
                            </svg>
                        </div>
                    </div>

                    <div class="feature-icon-container">
                        @if (!string.IsNullOrEmpty(item.Icon))
                        {
                            <div class="feature-icon-display">
                                <i class="@item.Icon"></i>
                            </div>
                        }
                        else
                        {
                            <div class="feature-icon-display feature-icon-default">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" stroke-width="2" />
                                </svg>
                            </div>
                        }
                    </div>

                    <div class="feature-content">
                        <h3 class="feature-title">
                            <svg class="title-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" stroke-width="2" />
                            </svg>
                            @item.Title
                        </h3>
                        <p class="feature-description">@item.Description</p>
                    </div>

                    <div class="feature-meta">
                        <div class="meta-item">
                            <svg class="meta-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" stroke-width="2" />
                            </svg>
                            <span>@(string.IsNullOrEmpty(item.Icon) ? "İkon yok" : item.Icon)</span>
                        </div>
                    </div>

                    <div class="feature-actions">
                        <a asp-action="Update" asp-controller="Feature" asp-route-id="@item.Id" class="ai-btn ai-btn-edit">
                            <svg class="btn-icon-sm" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7" stroke-width="2" />
                                <path d="M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z" stroke-width="2" />
                            </svg>
                            Düzenle
                        </a>
                        <a asp-action="Delete" asp-controller="Feature" asp-route-id="@item.Id" class="ai-btn ai-btn-delete">
                            <svg class="btn-icon-sm" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" stroke-width="2" />
                            </svg>
                            Sil
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="ai-empty-state">
            <div class="empty-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" stroke-width="2" />
                </svg>
            </div>
            <h3>Henüz Özellik Yok</h3>
            <p>Yeni özellik eklemek için yukarıdaki "Yeni Özellik Ekle" butonuna tıklayın.</p>
        </div>
    }
</div>

<style>
    .ai-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #0a0e27 0%, #1a1f3a 100%);
        margin: -30px -45px -100px -45px;
        padding: 60px 40px 100px 40px;
        position: relative;
        overflow: hidden;
        border-radius: 30px 30px 0 0;
    }

        .ai-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: radial-gradient(circle at 20% 30%, rgba(249, 115, 22, 0.1) 0%, transparent 50%), radial-gradient(circle at 80% 70%, rgba(234, 88, 12, 0.1) 0%, transparent 50%);
            animation: pulse 8s ease-in-out infinite;
            pointer-events: none;
        }

    @@keyframes pulse {
        0%, 100% {
            opacity: 0.5;
            transform: scale(1);
        }

        50% {
            opacity: 0.8;
            transform: scale(1.1);
        }
    }

    .ai-header {
        position: relative;
        z-index: 10;
        margin-bottom: 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
    }

    .ai-header-content {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .ai-icon-wrapper {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 30px rgba(249, 115, 22, 0.4);
    }

    .ai-header-icon {
        width: 36px;
        height: 36px;
        color: white;
    }

    .ai-title {
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
    }

    .ai-subtitle {
        color: rgba(255, 255, 255, 0.6);
        margin: 5px 0 0 0;
        font-size: 1rem;
    }

    .ai-btn-primary {
        background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
        border: none;
        padding: 14px 28px;
        border-radius: 12px;
        color: white;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(249, 115, 22, 0.4);
    }

        .ai-btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 30px rgba(249, 115, 22, 0.6);
            color: white;
        }

    .btn-icon {
        width: 20px;
        height: 20px;
    }

    .ai-stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
        position: relative;
        z-index: 10;
    }

    .ai-stat-card {
        background: rgba(26, 31, 58, 0.6);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(249, 115, 22, 0.2);
        border-radius: 16px;
        padding: 25px;
        display: flex;
        align-items: center;
        gap: 20px;
        transition: all 0.3s ease;
    }

        .ai-stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 30px rgba(249, 115, 22, 0.2);
        }

    .stat-primary:hover {
        border-color: rgba(249, 115, 22, 0.4);
    }

    .stat-success:hover {
        border-color: rgba(34, 197, 94, 0.4);
    }

    .stat-info:hover {
        border-color: rgba(59, 130, 246, 0.4);
    }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .stat-primary .stat-icon {
        background: linear-gradient(135deg, #f97316, #ea580c);
    }

    .stat-success .stat-icon {
        background: linear-gradient(135deg, #22c55e, #16a34a);
    }

    .stat-info .stat-icon {
        background: linear-gradient(135deg, #3b82f6, #2563eb);
    }

    .stat-icon svg {
        width: 28px;
        height: 28px;
        color: white;
    }

    .stat-content {
        flex: 1;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: white;
        margin-bottom: 5px;
    }

    .stat-label {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.6);
    }

    .ai-features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 25px;
        position: relative;
        z-index: 10;
    }

    .ai-feature-card {
        background: rgba(26, 31, 58, 0.6);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(249, 115, 22, 0.2);
        border-radius: 20px;
        padding: 30px;
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
    }

        .ai-feature-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(249, 115, 22, 0.1) 0%, rgba(234, 88, 12, 0.1) 100%);
            opacity: 0;
            transition: opacity 0.4s ease;
        }

        .ai-feature-card:hover {
            transform: translateY(-8px);
            border-color: rgba(249, 115, 22, 0.5);
            box-shadow: 0 20px 60px rgba(249, 115, 22, 0.3);
        }

            .ai-feature-card:hover::before {
                opacity: 1;
            }

    .feature-card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        position: relative;
        z-index: 2;
    }

    .feature-badge {
        background: linear-gradient(135deg, #f97316, #ea580c);
        color: white;
        padding: 6px 16px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 0.9rem;
    }

    .feature-status {
        width: 40px;
        height: 40px;
        background: rgba(34, 197, 94, 0.2);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .feature-status svg {
            width: 22px;
            height: 22px;
            color: #22c55e;
        }

    .feature-icon-container {
        display: flex;
        justify-content: center;
        margin-bottom: 25px;
        position: relative;
        z-index: 2;
    }

    .feature-icon-display {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, rgba(249, 115, 22, 0.2), rgba(234, 88, 12, 0.2));
        border: 2px solid rgba(249, 115, 22, 0.3);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        color: #f97316;
        transition: all 0.3s ease;
    }

    .ai-feature-card:hover .feature-icon-display {
        transform: scale(1.1) rotate(5deg);
        border-color: rgba(249, 115, 22, 0.5);
    }

    .feature-icon-default svg {
        width: 50px;
        height: 50px;
    }

    .feature-content {
        text-align: center;
        margin-bottom: 25px;
        position: relative;
        z-index: 2;
    }

    .feature-title {
        color: white;
        font-size: 1.4rem;
        font-weight: 700;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .title-icon {
        width: 22px;
        height: 22px;
        color: #f97316;
    }

    .feature-description {
        color: rgba(255, 255, 255, 0.7);
        line-height: 1.7;
        font-size: 0.95rem;
    }

    .feature-meta {
        background: rgba(10, 14, 39, 0.4);
        border-radius: 12px;
        padding: 15px;
        margin-bottom: 20px;
        position: relative;
        z-index: 2;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 10px;
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.9rem;
    }

    .meta-icon {
        width: 20px;
        height: 20px;
        color: #f97316;
        flex-shrink: 0;
    }

    .feature-actions {
        display: flex;
        gap: 12px;
        position: relative;
        z-index: 2;
    }

    .ai-btn {
        padding: 10px 20px;
        border-radius: 10px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        flex: 1;
        justify-content: center;
    }

    .btn-icon-sm {
        width: 18px;
        height: 18px;
    }

    .ai-btn-edit {
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        color: white;
    }

        .ai-btn-edit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
            color: white;
        }

    .ai-btn-delete {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        color: white;
    }

        .ai-btn-delete:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(239, 68, 68, 0.4);
            color: white;
        }

    .ai-empty-state {
        text-align: center;
        padding: 80px 20px;
        position: relative;
        z-index: 10;
    }

    .empty-icon {
        width: 120px;
        height: 120px;
        margin: 0 auto 30px;
        background: linear-gradient(135deg, rgba(249, 115, 22, 0.2), rgba(234, 88, 12, 0.2));
        border-radius: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .empty-icon svg {
            width: 60px;
            height: 60px;
            color: #f97316;
        }

    .ai-empty-state h3 {
        color: white;
        font-size: 1.8rem;
        margin-bottom: 15px;
    }

    .ai-empty-state p {
        color: rgba(255, 255, 255, 0.6);
        font-size: 1.1rem;
    }

    @@media (max-width: 768px) {
        .ai-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .ai-header-content {
            flex-direction: column;
            align-items: flex-start;
        }

        .ai-title {
            font-size: 2rem;
        }

        .ai-features-grid {
            grid-template-columns: 1fr;
        }
    }
</style>


