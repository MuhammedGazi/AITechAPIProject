@model UpdateFeatureDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="ai-container">
    <div class="ai-header">
        <div class="ai-header-content">
            <div class="ai-icon-wrapper">
                <svg class="ai-header-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7" stroke-width="2"/>
                    <path d="M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z" stroke-width="2"/>
                </svg>
            </div>
            <div>
                <h1 class="ai-title">Özellik Düzenle</h1>
                <div class="ai-breadcrumb">
                    <a asp-action="Index" asp-controller="Feature">
                        <svg class="breadcrumb-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" stroke-width="2"/>
                        </svg>
                        Özellikler
                    </a>
                    <span>/</span>
                    <span>Düzenle #@Model.Id</span>
                </div>
            </div>
        </div>
        <div class="ai-update-badge">
            <svg class="badge-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" stroke-width="2"/>
            </svg>
            Düzenleme Modu
        </div>
    </div>

    <div class="ai-form-container">
        <div class="form-header">
            <div class="form-header-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M13 10V3L4 14h7v7l9-11h-7z" stroke-width="2"/>
                </svg>
            </div>
            <div>
                <h2 class="form-title">Özellik Bilgileri</h2>
                <p class="form-subtitle">Mevcut özelliği güncelleyin</p>
            </div>
        </div>

        <form asp-action="Update" asp-controller="Feature" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="ai-id-card">
                <div class="id-card-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14" stroke-width="2"/>
                    </svg>
                </div>
                <div class="id-card-content">
                    <div class="id-label">Özellik ID</div>
                    <div class="id-value">#@Model.Id</div>
                </div>
                @if (!string.IsNullOrEmpty(Model.Icon))
                {
                    <div class="id-card-preview">
                        <div class="preview-label">Mevcut İkon:</div>
                        <div class="preview-icon">
                            <i class="@Model.Icon"></i>
                        </div>
                    </div>
                }
            </div>

            <div class="ai-form-group">
                <label asp-for="Title" class="ai-form-label">
                    <svg class="label-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" stroke-width="2"/>
                    </svg>
                    Başlık
                </label>
                <div class="input-wrapper">
                    <input asp-for="Title" class="ai-form-input" placeholder="Örn: Yapay Zeka Teknolojisi" />
                    <div class="input-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" stroke-width="2"/>
                        </svg>
                    </div>
                </div>
                <span class="ai-form-helper">
                    <svg class="helper-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <circle cx="12" cy="12" r="10" stroke-width="2"/>
                        <path d="M12 16v-4m0-4h.01" stroke-width="2"/>
                    </svg>
                    Özelliğin ana başlığını yazın
                </span>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="ai-form-group">
                <label asp-for="Icon" class="ai-form-label">
                    <svg class="label-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" stroke-width="2"/>
                    </svg>
                    İkon Sınıfı
                </label>
                <div class="icon-input-group">
                    <input asp-for="Icon" class="ai-form-input icon-input" placeholder="fa-solid fa-bolt" id="iconInput" />
                    <div class="icon-preview" id="iconPreview">
                        @if (!string.IsNullOrEmpty(Model.Icon))
                        {
                            <i class="@Model.Icon"></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-question"></i>
                        }
                    </div>
                </div>
                <span class="ai-form-helper">
                    <svg class="helper-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <circle cx="12" cy="12" r="10" stroke-width="2"/>
                        <path d="M12 16v-4m0-4h.01" stroke-width="2"/>
                    </svg>
                    Font Awesome ikon sınıfını girin (Örn: fa-solid fa-rocket, fa-solid fa-star)
                </span>
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>

            <div class="icon-examples">
                <div class="examples-title">
                    <svg class="examples-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" stroke-width="2"/>
                    </svg>
                    Popüler İkon Örnekleri:
                </div>
                <div class="icon-examples-grid">
                    <button type="button" class="icon-example" data-icon="fa-solid fa-bolt">
                        <i class="fa-solid fa-bolt"></i>
                        <span>fa-solid fa-bolt</span>
                    </button>
                    <button type="button" class="icon-example" data-icon="fa-solid fa-rocket">
                        <i class="fa-solid fa-rocket"></i>
                        <span>fa-solid fa-rocket</span>
                    </button>
                    <button type="button" class="icon-example" data-icon="fa-solid fa-star">
                        <i class="fa-solid fa-star"></i>
                        <span>fa-solid fa-star</span>
                    </button>
                    <button type="button" class="icon-example" data-icon="fa-solid fa-heart">
                        <i class="fa-solid fa-heart"></i>
                        <span>fa-solid fa-heart</span>
                    </button>
                    <button type="button" class="icon-example" data-icon="fa-solid fa-shield">
                        <i class="fa-solid fa-shield"></i>
                        <span>fa-solid fa-shield</span>
                    </button>
                    <button type="button" class="icon-example" data-icon="fa-solid fa-chart-line">
                        <i class="fa-solid fa-chart-line"></i>
                        <span>fa-solid fa-chart-line</span>
                    </button>
                    <button type="button" class="icon-example" data-icon="fa-solid fa-brain">
                        <i class="fa-solid fa-brain"></i>
                        <span>fa-solid fa-brain</span>
                    </button>
                    <button type="button" class="icon-example" data-icon="fa-solid fa-microchip">
                        <i class="fa-solid fa-microchip"></i>
                        <span>fa-solid fa-microchip</span>
                    </button>
                </div>
            </div>

            <div class="ai-form-group">
                <label asp-for="Description" class="ai-form-label">
                    <svg class="label-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M4 6h16M4 12h16M4 18h7" stroke-width="2" stroke-linecap="round"/>
                    </svg>
                    Açıklama
                </label>
                <div class="textarea-wrapper">
                    <textarea asp-for="Description" class="ai-form-textarea" placeholder="Özelliğin detaylı açıklamasını yazın..." rows="5"></textarea>
                    <div class="textarea-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" stroke-width="2"/>
                        </svg>
                    </div>
                </div>
                <span class="ai-form-helper">
                    <svg class="helper-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <circle cx="12" cy="12" r="10" stroke-width="2"/>
                        <path d="M12 16v-4m0-4h.01" stroke-width="2"/>
                    </svg>
                    Bu özelliğin ne işe yaradığını detaylı açıklayın
                </span>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-info-box">
                <svg class="info-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" stroke-width="2"/>
                </svg>
                <div>
                    <strong>Güncelleme Notu:</strong> Yaptığınız değişiklikler anında kaydedilecek ve kullanıcılar güncel bilgileri görecektir. İkon için <a href="https://fontawesome.com/icons" target="_blank" style="color: #f97316;">Font Awesome</a> sitesini ziyaret edebilirsiniz.
                </div>
            </div>

            <div class="ai-form-actions">
                <button type="submit" class="ai-btn ai-btn-submit">
                    <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M5 13l4 4L19 7" stroke-width="2.5" stroke-linecap="round"/>
                    </svg>
                    Değişiklikleri Kaydet
                </button>
                <a asp-action="Index" asp-controller="Feature" class="ai-btn ai-btn-cancel">
                    <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M6 18L18 6M6 6l12 12" stroke-width="2"/>
                    </svg>
                    İptal
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Icon preview functionality
        const iconInput = document.getElementById('iconInput');
        const iconPreview = document.getElementById('iconPreview');

        if (iconInput && iconPreview) {
            iconInput.addEventListener('input', function() {
                const iconClass = this.value.trim();
                if (iconClass) {
                    iconPreview.innerHTML = `<i class="${iconClass}"></i>`;
                } else {
                    iconPreview.innerHTML = '<i class="fa-solid fa-question"></i>';
                }
            });

            // Icon example buttons
            document.querySelectorAll('.icon-example').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    const iconClass = this.getAttribute('data-icon');
                    iconInput.value = iconClass;
                    iconPreview.innerHTML = `<i class="${iconClass}"></i>`;
                    
                    // Visual feedback
                    document.querySelectorAll('.icon-example').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                });
            });
        }
    </script>
}

