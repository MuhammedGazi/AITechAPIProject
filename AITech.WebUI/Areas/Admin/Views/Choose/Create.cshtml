@model CreateChooseDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="ai-container">
    <div class="ai-header">
        <h1 class="ai-title">Create New Choose Item</h1>
        <div class="ai-breadcrumb">
            <a asp-action="Index" asp-controller="Choose">Choose Items</a>
            <span>/</span>
            <span>Create</span>
        </div>
    </div>

    <div class="ai-form-container">
        <form asp-action="Create" asp-controller="Choose" method="post">
            <div class="ai-form-group">
                <label asp-for="Title" class="ai-form-label">Title</label>
                <input asp-for="Title" class="ai-form-input" placeholder="Enter title..." />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="ai-form-group">
                <label asp-for="Description" class="ai-form-label">Description</label>
                <textarea asp-for="Description" class="ai-form-textarea" placeholder="Enter description..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="ai-items-grid">
                <div class="ai-form-group">
                    <label asp-for="Item1" class="ai-form-label">Item 1</label>
                    <input asp-for="Item1" class="ai-form-input" placeholder="First item..." />
                    <span asp-validation-for="Item1" class="text-danger"></span>
                </div>

                <div class="ai-form-group">
                    <label asp-for="Item2" class="ai-form-label">Item 2</label>
                    <input asp-for="Item2" class="ai-form-input" placeholder="Second item..." />
                    <span asp-validation-for="Item2" class="text-danger"></span>
                </div>

                <div class="ai-form-group">
                    <label asp-for="Item3" class="ai-form-label">Item 3</label>
                    <input asp-for="Item3" class="ai-form-input" placeholder="Third item..." />
                    <span asp-validation-for="Item3" class="text-danger"></span>
                </div>
            </div>

            <div class="ai-form-group">
                <label asp-for="ImageUrl" class="ai-form-label">Image URL</label>
                <input asp-for="ImageUrl" class="ai-form-input" placeholder="https://example.com/image.jpg" />
                <span class="ai-form-helper">Enter a valid image URL</span>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="ai-form-actions">
                <button type="submit" class="ai-btn ai-btn-submit">Create Item</button>
                <a asp-action="Index" asp-controller="Choose" class="ai-btn ai-btn-cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>
<style>
    /* Container - Ekranı tamamen kapla */
    .ai-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #0a0e27 0%, #1a1f3a 100%);
        margin: -30px -45px -100px -45px;
        padding: 60px 40px 100px 40px;
        position: relative;
        overflow: hidden;
        border-radius: 30px 30px 0 0;
    }

        .ai-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: radial-gradient(circle at 20% 30%, rgba(99, 102, 241, 0.1) 0%, transparent 50%), radial-gradient(circle at 80% 70%, rgba(139, 92, 246, 0.1) 0%, transparent 50%);
            animation: pulse 8s ease-in-out infinite;
            pointer-events: none;
        }

    @@keyframes pulse {
        0%, 100% {
            opacity: 0.5;
            transform: scale(1);
        }

        50% {
            opacity: 0.8;
            transform: scale(1.1);
        }
    }

    /* Header */
    .ai-header {
        position: relative;
        z-index: 10;
        margin-bottom: 40px;
    }

    .ai-title {
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 10px;
    }

    .ai-breadcrumb {
        display: flex;
        gap: 8px;
        align-items: center;
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.9rem;
    }

        .ai-breadcrumb a {
            color: #6366f1;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .ai-breadcrumb a:hover {
                color: #8b5cf6;
            }

    /* Form Container */
    .ai-form-container {
        max-width: 800px;
        margin: 0 auto;
        background: rgba(26, 31, 58, 0.6);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(99, 102, 241, 0.2);
        border-radius: 20px;
        padding: 40px;
        position: relative;
        z-index: 10;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    }

    /* Form Groups */
    .ai-form-group {
        margin-bottom: 28px;
    }

    .ai-form-label {
        display: block;
        color: #ffffff;
        font-weight: 600;
        margin-bottom: 10px;
        font-size: 0.95rem;
        text-shadow: 0 2px 10px rgba(99, 102, 241, 0.2);
    }

    .ai-form-input,
    .ai-form-textarea {
        width: 100%;
        padding: 14px 18px;
        background: rgba(10, 14, 39, 0.6);
        border: 1px solid rgba(99, 102, 241, 0.3);
        border-radius: 12px;
        color: #ffffff;
        font-size: 1rem;
        transition: all 0.3s ease;
        outline: none;
    }

        .ai-form-input:focus,
        .ai-form-textarea:focus {
            border-color: #6366f1;
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
            background: rgba(10, 14, 39, 0.8);
        }

    .ai-form-textarea {
        resize: vertical;
        min-height: 100px;
    }

        .ai-form-input::placeholder,
        .ai-form-textarea::placeholder {
            color: rgba(255, 255, 255, 0.4);
        }

    /* Helper Text */
    .ai-form-helper {
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.5);
        margin-top: 6px;
        display: block;
    }

    /* Validation */
    .text-danger {
        color: #ef4444 !important;
        font-size: 0.85rem;
        margin-top: 6px;
        display: block;
    }

    .input-validation-error {
        border-color: #ef4444 !important;
    }

    /* Action Buttons */
    .ai-form-actions {
        display: flex;
        gap: 15px;
        margin-top: 35px;
        padding-top: 25px;
        border-top: 1px solid rgba(99, 102, 241, 0.2);
    }

    .ai-btn {
        padding: 14px 32px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .ai-btn-submit {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        color: white;
        flex: 1;
        box-shadow: 0 4px 20px rgba(99, 102, 241, 0.4);
    }

        .ai-btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 30px rgba(99, 102, 241, 0.6);
        }

    .ai-btn-cancel {
        background: rgba(255, 255, 255, 0.1);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

        .ai-btn-cancel:hover {
            background: rgba(255, 255, 255, 0.15);
            transform: translateY(-2px);
            color: white;
        }

    /* Items Grid */
    .ai-items-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 28px;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .ai-form-container {
            padding: 25px;
        }

        .ai-title {
            font-size: 2rem;
        }

        .ai-items-grid {
            grid-template-columns: 1fr;
        }

        .ai-form-actions {
            flex-direction: column;
        }
    }
</style>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

