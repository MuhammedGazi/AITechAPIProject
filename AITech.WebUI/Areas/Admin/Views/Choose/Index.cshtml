@model List<ResultChooseDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="ai-container">
    <div class="ai-header">
        <h1 class="ai-title">Choose Items Management</h1>
        <a asp-action="Create" asp-controller="Choose" class="ai-btn-primary">
            <span>+</span> Add New Item
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="ai-grid">
            @foreach (var item in Model)
            {
                <div class="ai-card">
                    <img src="@item.ImageUrl" alt="@item.Title" class="ai-card-image" />

                    <div class="ai-card-body">
                        <h3 class="ai-card-title">@item.Title</h3>
                        <p class="ai-card-description">@item.Description</p>

                        <div class="ai-items-list">
                            <div class="ai-item">@item.Item1</div>
                            <div class="ai-item">@item.Item2</div>
                            <div class="ai-item">@item.Item3</div>
                        </div>

                        <div class="ai-actions">
                            <a asp-action="Update" asp-controller="Choose" asp-route-id="@item.Id" class="ai-btn ai-btn-edit">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-controller="Choose" asp-route-id="@item.Id" class="ai-btn ai-btn-delete">
                                Delete
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="ai-empty-state">
            <p>No items found. Click "Add New Item" to get started.</p>
        </div>
    }
</div>
<style>
    /* Container - Ekranı tamamen kapla, boşluk bırakma */
    .ai-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #0a0e27 0%, #1a1f3a 100%);
        margin: -30px -45px -100px -45px;
        padding: 60px 40px 100px 40px;
        position: relative;
        overflow: hidden;
        border-radius: 30px 30px 0 0;
    }

        /* Animated background particles */
        .ai-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: radial-gradient(circle at 20% 30%, rgba(99, 102, 241, 0.1) 0%, transparent 50%), radial-gradient(circle at 80% 70%, rgba(139, 92, 246, 0.1) 0%, transparent 50%);
            animation: pulse 8s ease-in-out infinite;
            pointer-events: none;
        }

    @@keyframes pulse {
        0%, 100% {
            opacity: 0.5;
            transform: scale(1);
        }

        50% {
            opacity: 0.8;
            transform: scale(1.1);
        }
    }

    /* Header Section */
    .ai-header {
        position: relative;
        z-index: 10;
        margin-bottom: 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
    }

    .ai-title {
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 0 30px rgba(99, 102, 241, 0.3);
        margin: 0;
    }

    .ai-btn-primary {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        border: none;
        padding: 12px 28px;
        border-radius: 12px;
        color: white;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 20px rgba(99, 102, 241, 0.4);
    }

        .ai-btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 30px rgba(99, 102, 241, 0.6);
            color: white;
        }

    /* Grid Layout */
    .ai-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
        gap: 30px;
        position: relative;
        z-index: 10;
    }

    /* Card Styling */
    .ai-card {
        background: rgba(26, 31, 58, 0.6);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(99, 102, 241, 0.2);
        border-radius: 20px;
        padding: 0;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        overflow: hidden;
        position: relative;
    }

        .ai-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
            opacity: 0;
            transition: opacity 0.4s ease;
            pointer-events: none;
        }

        .ai-card:hover {
            transform: translateY(-8px);
            border-color: rgba(99, 102, 241, 0.5);
            box-shadow: 0 20px 60px rgba(99, 102, 241, 0.3);
        }

            .ai-card:hover::before {
                opacity: 1;
            }

    /* Card Image */
    .ai-card-image {
        width: 100%;
        height: 220px;
        object-fit: cover;
        border-radius: 20px 20px 0 0;
    }

    /* Card Body */
    .ai-card-body {
        padding: 25px;
        position: relative;
        z-index: 2;
    }

    .ai-card-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 12px;
        text-shadow: 0 2px 10px rgba(99, 102, 241, 0.3);
    }

    .ai-card-description {
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 20px;
        line-height: 1.6;
        font-size: 0.95rem;
    }

    /* Items List */
    .ai-items-list {
        background: rgba(10, 14, 39, 0.4);
        border-radius: 12px;
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid rgba(99, 102, 241, 0.15);
    }

    .ai-item {
        color: rgba(255, 255, 255, 0.8);
        padding: 8px 0;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 0.9rem;
    }

        .ai-item::before {
            content: '✓';
            display: inline-block;
            width: 22px;
            height: 22px;
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            border-radius: 50%;
            text-align: center;
            line-height: 22px;
            font-size: 12px;
            font-weight: bold;
            flex-shrink: 0;
        }

    /* Action Buttons */
    .ai-actions {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
    }

    .ai-btn {
        padding: 10px 20px;
        border-radius: 10px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        font-size: 0.9rem;
    }

    .ai-btn-edit {
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        color: white;
    }

        .ai-btn-edit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
            color: white;
        }

    .ai-btn-delete {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        color: white;
    }

        .ai-btn-delete:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(239, 68, 68, 0.4);
            color: white;
        }

    /* Empty State */
    .ai-empty-state {
        text-align: center;
        padding: 80px 20px;
        color: rgba(255, 255, 255, 0.6);
        font-size: 1.2rem;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .ai-grid {
            grid-template-columns: 1fr;
        }

        .ai-title {
            font-size: 2rem;
        }

        .ai-header {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>