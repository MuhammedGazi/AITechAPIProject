@model UpdateTestimonialDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="ai-container">
    <div class="ai-header">
        <div class="ai-header-content">
            <div class="ai-icon-wrapper">
                <svg class="ai-header-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7" stroke-width="2"/>
                    <path d="M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z" stroke-width="2"/>
                </svg>
            </div>
            <div>
                <h1 class="ai-title">Referans Düzenle</h1>
                <p class="ai-subtitle">Müşteri referans bilgilerini güncelleyin</p>
            </div>
        </div>
        <a asp-action="Index" asp-controller="Testimonial" class="ai-btn-secondary">
            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M10 19l-7-7m0 0l7-7m-7 7h18" stroke-width="2" stroke-linecap="round"/>
            </svg>
            Geri Dön
        </a>
    </div>

    <div class="ai-form-container">
        <form asp-action="Update" asp-controller="Testimonial" method="post" class="ai-form">
            <input type="hidden" asp-for="Id" />
            
            <div class="ai-form-grid">
                <div class="ai-form-group full-width">
                    <label asp-for="Name" class="ai-label">
                        <svg class="label-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" stroke-width="2"/>
                        </svg>
                        Müşteri Adı
                    </label>
                    <input asp-for="Name" class="ai-input" placeholder="Örn: Ahmet Yılmaz" />
                    <span asp-validation-for="Name" class="ai-error"></span>
                </div>

                <div class="ai-form-group full-width">
                    <label asp-for="Title" class="ai-label">
                        <svg class="label-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" stroke-width="2"/>
                        </svg>
                        Ünvan / Pozisyon
                    </label>
                    <input asp-for="Title" class="ai-input" placeholder="Örn: Genel Müdür, ABC Şirketi" />
                    <span asp-validation-for="Title" class="ai-error"></span>
                </div>

                <div class="ai-form-group full-width">
                    <label asp-for="ImageUrl" class="ai-label">
                        <svg class="label-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" stroke-width="2"/>
                        </svg>
                        Profil Fotoğrafı URL
                    </label>
                    <input asp-for="ImageUrl" class="ai-input" placeholder="https://example.com/image.jpg" />
                    <span asp-validation-for="ImageUrl" class="ai-error"></span>
                    <div class="ai-hint">
                        <svg class="hint-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" stroke-width="2"/>
                        </svg>
                        Profil fotoğrafının URL adresini girin
                    </div>
                </div>

                <div class="ai-form-group full-width">
                    <label asp-for="Comment" class="ai-label">
                        <svg class="label-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" stroke-width="2"/>
                        </svg>
                        Referans Yorumu
                    </label>
                    <textarea asp-for="Comment" class="ai-textarea" rows="6" placeholder="Müşterinin görüş ve yorumlarını buraya yazın..."></textarea>
                    <span asp-validation-for="Comment" class="ai-error"></span>
                    <div class="character-count">
                        <span id="charCount">0</span> karakter
                    </div>
                </div>

                <div class="ai-form-group full-width">
                    <label class="ai-label">
                        <svg class="label-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke-width="2"/>
                        </svg>
                        Durum
                    </label>
                    <div class="ai-toggle-group">
                        <label class="ai-toggle">
                            <input type="radio" value="true" checked />
                            <span class="toggle-btn active">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path d="M5 13l4 4L19 7" stroke-width="2"/>
                                </svg>
                                Aktif
                            </span>
                        </label>
                        <label class="ai-toggle">
                            <input type="radio" value="false" />
                            <span class="toggle-btn inactive">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path d="M6 18L18 6M6 6l12 12" stroke-width="2"/>
                                </svg>
                                Pasif
                            </span>
                        </label>
                    </div>
                </div>
            </div>

            <div class="ai-form-actions">
                <button type="submit" class="ai-btn-submit">
                    <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M5 13l4 4L19 7" stroke-width="2.5"/>
                    </svg>
                    Değişiklikleri Kaydet
                </button>
                <a asp-action="Index" asp-controller="Testimonial" class="ai-btn-cancel">
                    <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M6 18L18 6M6 6l12 12" stroke-width="2"/>
                    </svg>
                    İptal
                </a>
            </div>
        </form>

        <div class="ai-preview-card">
            <div class="preview-header">
                <svg class="preview-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" stroke-width="2"/>
                    <path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" stroke-width="2"/>
                </svg>
                <h3>Ön İzleme</h3>
            </div>
            <div class="preview-content">
                <div class="preview-testimonial">
                    <div class="preview-stars">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                        </svg>
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                        </svg>
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                        </svg>
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                        </svg>
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                        </svg>
                    </div>
                    <p class="preview-comment" id="previewComment">Yorumunuz burada görünecek...</p>
                    <div class="preview-profile">
                        <div class="preview-image">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" stroke-width="2"/>
                            </svg>
                        </div>
                        <div>
                            <p class="preview-name" id="previewName">Müşteri Adı</p>
                            <p class="preview-title" id="previewTitle">Ünvan</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .ai-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #0a0e27 0%, #1a1f3a 100%);
        margin: -30px -45px -100px -45px;
        padding: 60px 40px 100px 40px;
        position: relative;
        overflow: hidden;
        border-radius: 30px 30px 0 0;
    }

    .ai-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: 
            radial-gradient(circle at 20% 30%, rgba(168, 85, 247, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 80% 70%, rgba(59, 130, 246, 0.1) 0%, transparent 50%);
        animation: pulse 8s ease-in-out infinite;
        pointer-events: none;
    }

    @@keyframes pulse {
        0%, 100% { opacity: 0.5; transform: scale(1); }
        50% { opacity: 0.8; transform: scale(1.1); }
    }

    .ai-header {
        position: relative;
        z-index: 10;
        margin-bottom: 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
    }

    .ai-header-content {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .ai-icon-wrapper {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 30px rgba(59, 130, 246, 0.4);
    }

    .ai-header-icon {
        width: 36px;
        height: 36px;
        color: white;
    }

    .ai-title {
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
    }

    .ai-subtitle {
        color: rgba(255, 255, 255, 0.6);
        margin: 5px 0 0 0;
        font-size: 1rem;
    }

    .ai-btn-secondary {
        background: rgba(59, 130, 246, 0.1);
        border: 2px solid rgba(59, 130, 246, 0.3);
        padding: 14px 28px;
        border-radius: 12px;
        color: #3b82f6;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s ease;
    }

    .ai-btn-secondary:hover {
        background: rgba(59, 130, 246, 0.2);
        border-color: rgba(59, 130, 246, 0.5);
        transform: translateY(-2px);
        color: #3b82f6;
    }

    .btn-icon {
        width: 20px;
        height: 20px;
    }

    .ai-form-container {
        display: grid;
        grid-template-columns: 1fr 400px;
        gap: 30px;
        position: relative;
        z-index: 10;
    }

    .ai-form {
        background: rgba(26, 31, 58, 0.6);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(59, 130, 246, 0.2);
        border-radius: 20px;
        padding: 40px;
    }

    .ai-form-grid {
        display: grid;
        gap: 25px;
    }

    .ai-form-group {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .full-width {
        grid-column: 1 / -1;
    }

    .ai-label {
        color: white;
        font-weight: 600;
        font-size: 1rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .label-icon {
        width: 20px;
        height: 20px;
        color: #3b82f6;
    }

    .ai-input, .ai-textarea {
        background: rgba(10, 14, 39, 0.6);
        border: 2px solid rgba(59, 130, 246, 0.2);
        border-radius: 12px;
        padding: 14px 18px;
        color: white;
        font-size: 1rem;
        transition: all 0.3s ease;
        font-family: inherit;
    }

    .ai-input:focus, .ai-textarea:focus {
        outline: none;
        border-color: #3b82f6;
        box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
        background: rgba(10, 14, 39, 0.8);
    }

    .ai-textarea {
        resize: vertical;
        min-height: 150px;
    }

    .ai-input::placeholder, .ai-textarea::placeholder {
        color: rgba(255, 255, 255, 0.3);
    }

    .ai-error {
        color: #ef4444;
        font-size: 0.875rem;
        margin-top: -5px;
    }

    .ai-hint {
        display: flex;
        align-items: center;
        gap: 6px;
        color: rgba(255, 255, 255, 0.5);
        font-size: 0.875rem;
    }

    .hint-icon {
        width: 16px;
        height: 16px;
    }

    .character-count {
        text-align: right;
        color: rgba(255, 255, 255, 0.5);
        font-size: 0.875rem;
        margin-top: -5px;
    }

    .ai-toggle-group {
        display: flex;
        gap: 15px;
    }

    .ai-toggle {
        flex: 1;
        cursor: pointer;
    }

    .ai-toggle input {
        display: none;
    }

    .toggle-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        padding: 14px 20px;
        border-radius: 12px;
        border: 2px solid transparent;
        font-weight: 600;
        transition: all 0.3s ease;
        background: rgba(10, 14, 39, 0.6);
        color: rgba(255, 255, 255, 0.5);
    }

    .toggle-btn svg {
        width: 20px;
        height: 20px;
    }

    .ai-toggle input:checked + .toggle-btn.active {
        background: linear-gradient(135deg, #22c55e, #16a34a);
        border-color: #22c55e;
        color: white;
    }

    .ai-toggle input:checked + .toggle-btn.inactive {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        border-color: #ef4444;
        color: white;
    }

    .toggle-btn:hover {
        border-color: rgba(59, 130, 246, 0.3);
    }

    .ai-form-actions {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }

    .ai-btn-submit, .ai-btn-cancel {
        flex: 1;
        padding: 16px 32px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        text-decoration: none;
    }

    .ai-btn-submit {
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        color: white;
    }

    .ai-btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(59, 130, 246, 0.4);
    }

    .ai-btn-cancel {
        background: rgba(239, 68, 68, 0.1);
        border: 2px solid rgba(239, 68, 68, 0.3);
        color: #ef4444;
    }

    .ai-btn-cancel:hover {
        background: rgba(239, 68, 68, 0.2);
        border-color: rgba(239, 68, 68, 0.5);
        transform: translateY(-2px);
    }

    .ai-preview-card {
        background: rgba(26, 31, 58, 0.6);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(168, 85, 247, 0.2);
        border-radius: 20px;
        padding: 30px;
        height: fit-content;
        position: sticky;
        top: 20px;
    }

    .preview-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 25px;
        padding-bottom: 20px;
        border-bottom: 1px solid rgba(168, 85, 247, 0.2);
    }

    .preview-icon {
        width: 24px;
        height: 24px;
        color: #a855f7;
    }

    .preview-header h3 {
        color: white;
        font-size: 1.3rem;
        margin: 0;
    }

    .preview-content {
        background: rgba(10, 14, 39, 0.4);
        border-radius: 12px;
        padding: 25px;
    }

    .preview-testimonial {
        text-align: center;
    }

    .preview-stars {
        display: flex;
        justify-content: center;
        gap: 6px;
        margin-bottom: 20px;
    }

    .preview-stars svg {
        width: 22px;
        height: 22px;
        color: #fbbf24;
    }

    .preview-comment {
        color: rgba(255, 255, 255, 0.8);
        font-style: italic;
        line-height: 1.7;
        margin-bottom: 25px;
        font-size: 0.95rem;
    }

    .preview-profile {
        display: flex;
        align-items: center;
        gap: 15px;
        justify-content: center;
    }

    .preview-image {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(168, 85, 247, 0.3), rgba(139, 92, 246, 0.3));
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .preview-image svg {
        width: 30px;
        height: 30px;
        color: #a855f7;
    }

    .preview-name {
        color: white;
        font-weight: 700;
        margin: 0 0 5px 0;
        font-size: 1.1rem;
    }

    .preview-title {
        color: rgba(255, 255, 255, 0.6);
        margin: 0;
        font-size: 0.9rem;
    }

    @@media (max-width: 1200px) {
        .ai-form-container {
            grid-template-columns: 1fr;
        }

        .ai-preview-card {
            position: relative;
            top: 0;
        }
    }

    @@media (max-width: 768px) {
        .ai-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .ai-header-content {
            flex-direction: column;
            align-items: flex-start;
        }

        .ai-title {
            font-size: 2rem;
        }

        .ai-form {
            padding: 25px;
        }

        .ai-form-actions {
            flex-direction: column;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const nameInput = document.querySelector('input[name="Name"]');
        const titleInput = document.querySelector('input[name="Title"]');
        const commentInput = document.querySelector('textarea[name="Comment"]');
        
        const previewName = document.getElementById('previewName');
        const previewTitle = document.getElementById('previewTitle');
        const previewComment = document.getElementById('previewComment');
        const charCount = document.getElementById('charCount');

        function updatePreview() {
            previewName.textContent = nameInput.value || 'Müşteri Adı';
            previewTitle.textContent = titleInput.value || 'Ünvan';
            previewComment.textContent = commentInput.value || 'Yorumunuz burada görünecek...';
            charCount.textContent = commentInput.value.length;
        }

        nameInput.addEventListener('input', updatePreview);
        titleInput.addEventListener('input', updatePreview);
        commentInput.addEventListener('input', updatePreview);

        // Initialize preview with existing values
        updatePreview();
    });
</script>


