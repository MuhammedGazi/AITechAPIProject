@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="ai-container">
    <div class="ai-header">
        <div class="ai-header-content">
            <div class="ai-icon-wrapper">
                <svg class="ai-header-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" stroke-width="2"/>
                </svg>
            </div>
            <div>
                <h1 class="ai-title">Müşteri Referansları</h1>
                <p class="ai-subtitle">Tüm müşteri yorumlarını görüntüleyin ve yönetin</p>
            </div>
        </div>
        <a asp-action="Create" asp-controller="Testimonial" class="ai-btn-primary">
            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M12 5v14m7-7H5" stroke-width="2.5" stroke-linecap="round"/>
            </svg>
            Yeni Referans Ekle
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="ai-stats-grid">
            <div class="ai-stat-card stat-primary">
                <div class="stat-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" stroke-width="2"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@Model.Count</div>
                    <div class="stat-label">Toplam Referans</div>
                </div>
            </div>

            <div class="ai-stat-card stat-success">
                <div class="stat-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M5 13l4 4L19 7" stroke-width="2"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-value">Onaylı</div>
                    <div class="stat-label">Durum</div>
                </div>
            </div>

            <div class="ai-stat-card stat-info">
                <div class="stat-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" stroke-width="2"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-value">5.0</div>
                    <div class="stat-label">Ortalama Puan</div>
                </div>
            </div>
        </div>

        <div class="ai-testimonials-grid">
            @foreach (var item in Model)
            {
                <div class="ai-testimonial-card">
                    <div class="testimonial-header">
                        <div class="testimonial-badge">#@item.Id</div>
                        <div class="testimonial-stars">
                            @for (int i = 0; i < 5; i++)
                            {
                                <svg viewBox="0 0 24 24" fill="currentColor" stroke="none">
                                    <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                                </svg>
                            }
                        </div>
                    </div>

                    <div class="testimonial-profile">
                        <div class="profile-image">
                            <img src="@item.ImageUrl" alt="@item.Name" />
                        </div>
                        <div class="profile-info">
                            <h3 class="profile-name">@item.Name</h3>
                            <p class="profile-title">@item.Title</p>
                        </div>
                    </div>

                    <div class="testimonial-comment">
                        <svg class="quote-icon" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
                        </svg>
                        <p>@item.Comment</p>
                    </div>

                    <div class="testimonial-actions">
                        <a asp-action="Update" asp-controller="Testimonial" asp-route-id="@item.Id" class="ai-btn ai-btn-edit">
                            <svg class="btn-icon-sm" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7" stroke-width="2"/>
                                <path d="M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z" stroke-width="2"/>
                            </svg>
                            Düzenle
                        </a>
                        <a asp-action="Delete" asp-controller="Testimonial" asp-route-id="@item.Id" class="ai-btn ai-btn-delete">
                            <svg class="btn-icon-sm" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" stroke-width="2"/>
                            </svg>
                            Sil
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="ai-empty-state">
            <div class="empty-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" stroke-width="2"/>
                </svg>
            </div>
            <h3>Henüz Referans Yok</h3>
            <p>Yeni referans eklemek için yukarıdaki "Yeni Referans Ekle" butonuna tıklayın.</p>
        </div>
    }
</div>

<style>
    .ai-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #0a0e27 0%, #1a1f3a 100%);
        margin: -30px -45px -100px -45px;
        padding: 60px 40px 100px 40px;
        position: relative;
        overflow: hidden;
        border-radius: 30px 30px 0 0;
    }

    .ai-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: 
            radial-gradient(circle at 20% 30%, rgba(168, 85, 247, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 80% 70%, rgba(139, 92, 246, 0.1) 0%, transparent 50%);
        animation: pulse 8s ease-in-out infinite;
        pointer-events: none;
    }

    @@keyframes pulse {
        0%, 100% { opacity: 0.5; transform: scale(1); }
        50% { opacity: 0.8; transform: scale(1.1); }
    }

    .ai-header {
        position: relative;
        z-index: 10;
        margin-bottom: 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
    }

    .ai-header-content {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .ai-icon-wrapper {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, #a855f7 0%, #8b5cf6 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 30px rgba(168, 85, 247, 0.4);
    }

    .ai-header-icon {
        width: 36px;
        height: 36px;
        color: white;
    }

    .ai-title {
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, #a855f7 0%, #8b5cf6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
    }

    .ai-subtitle {
        color: rgba(255, 255, 255, 0.6);
        margin: 5px 0 0 0;
        font-size: 1rem;
    }

    .ai-btn-primary {
        background: linear-gradient(135deg, #a855f7 0%, #8b5cf6 100%);
        border: none;
        padding: 14px 28px;
        border-radius: 12px;
        color: white;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(168, 85, 247, 0.4);
    }

    .ai-btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(168, 85, 247, 0.6);
        color: white;
    }

    .btn-icon {
        width: 20px;
        height: 20px;
    }

    .ai-stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
        position: relative;
        z-index: 10;
    }

    .ai-stat-card {
        background: rgba(26, 31, 58, 0.6);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(168, 85, 247, 0.2);
        border-radius: 16px;
        padding: 25px;
        display: flex;
        align-items: center;
        gap: 20px;
        transition: all 0.3s ease;
    }

    .ai-stat-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 30px rgba(168, 85, 247, 0.2);
    }

    .stat-primary:hover {
        border-color: rgba(168, 85, 247, 0.4);
    }

    .stat-success:hover {
        border-color: rgba(34, 197, 94, 0.4);
    }

    .stat-info:hover {
        border-color: rgba(251, 191, 36, 0.4);
    }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .stat-primary .stat-icon {
        background: linear-gradient(135deg, #a855f7, #8b5cf6);
    }

    .stat-success .stat-icon {
        background: linear-gradient(135deg, #22c55e, #16a34a);
    }

    .stat-info .stat-icon {
        background: linear-gradient(135deg, #fbbf24, #f59e0b);
    }

    .stat-icon svg {
        width: 28px;
        height: 28px;
        color: white;
    }

    .stat-content {
        flex: 1;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: white;
        margin-bottom: 5px;
    }

    .stat-label {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.6);
    }

    .ai-testimonials-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
        gap: 25px;
        position: relative;
        z-index: 10;
    }

    .ai-testimonial-card {
        background: rgba(26, 31, 58, 0.6);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(168, 85, 247, 0.2);
        border-radius: 20px;
        padding: 30px;
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
    }

    .ai-testimonial-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(168, 85, 247, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
        opacity: 0;
        transition: opacity 0.4s ease;
    }

    .ai-testimonial-card:hover {
        transform: translateY(-8px);
        border-color: rgba(168, 85, 247, 0.5);
        box-shadow: 0 20px 60px rgba(168, 85, 247, 0.3);
    }

    .ai-testimonial-card:hover::before {
        opacity: 1;
    }

    .testimonial-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        position: relative;
        z-index: 2;
    }

    .testimonial-badge {
        background: linear-gradient(135deg, #a855f7, #8b5cf6);
        color: white;
        padding: 6px 16px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 0.9rem;
    }

    .testimonial-stars {
        display: flex;
        gap: 4px;
    }

    .testimonial-stars svg {
        width: 18px;
        height: 18px;
        color: #fbbf24;
    }

    .testimonial-profile {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 20px;
        position: relative;
        z-index: 2;
    }

    .profile-image {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        overflow: hidden;
        border: 3px solid rgba(168, 85, 247, 0.4);
        flex-shrink: 0;
    }

    .profile-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .profile-info {
        flex: 1;
    }

    .profile-name {
        color: white;
        font-size: 1.3rem;
        font-weight: 700;
        margin: 0 0 5px 0;
    }

    .profile-title {
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.9rem;
        margin: 0;
    }

    .testimonial-comment {
        background: rgba(10, 14, 39, 0.4);
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
        position: relative;
        z-index: 2;
        border-left: 3px solid #a855f7;
    }

    .quote-icon {
        width: 24px;
        height: 24px;
        color: rgba(168, 85, 247, 0.3);
        margin-bottom: 10px;
    }

    .testimonial-comment p {
        color: rgba(255, 255, 255, 0.8);
        margin: 0;
        line-height: 1.7;
        font-size: 0.95rem;
        font-style: italic;
    }

    .testimonial-actions {
        display: flex;
        gap: 12px;
        position: relative;
        z-index: 2;
    }

    .ai-btn {
        padding: 10px 20px;
        border-radius: 10px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        flex: 1;
        justify-content: center;
    }

    .btn-icon-sm {
        width: 18px;
        height: 18px;
    }

    .ai-btn-edit {
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        color: white;
    }

    .ai-btn-edit:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
        color: white;
    }

    .ai-btn-delete {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        color: white;
    }

    .ai-btn-delete:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(239, 68, 68, 0.4);
        color: white;
    }

    .ai-empty-state {
        text-align: center;
        padding: 80px 20px;
        position: relative;
        z-index: 10;
    }

    .empty-icon {
        width: 120px;
        height: 120px;
        margin: 0 auto 30px;
        background: linear-gradient(135deg, rgba(168, 85, 247, 0.2), rgba(139, 92, 246, 0.2));
        border-radius: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .empty-icon svg {
        width: 60px;
        height: 60px;
        color: #a855f7;
    }

    .ai-empty-state h3 {
        color: white;
        font-size: 1.8rem;
        margin-bottom: 15px;
    }

    .ai-empty-state p {
        color: rgba(255, 255, 255, 0.6);
        font-size: 1.1rem;
    }

    @@media (max-width: 768px) {
        .ai-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .ai-header-content {
            flex-direction: column;
            align-items: flex-start;
        }

        .ai-title {
            font-size: 2rem;
        }

        .ai-testimonials-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

