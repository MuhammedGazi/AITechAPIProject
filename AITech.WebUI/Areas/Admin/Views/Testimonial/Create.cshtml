@model CreateTestimonialDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="ai-container">
    <div class="ai-header">
        <div class="ai-header-content">
            <div class="ai-icon-wrapper">
                <svg class="ai-header-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M12 4v16m8-8H4" stroke-width="2.5" stroke-linecap="round"/>
                </svg>
            </div>
            <div>
                <h1 class="ai-title">Yeni Referans Ekle</h1>
                <div class="ai-breadcrumb">
                    <a asp-action="Index" asp-controller="Testimonial">
                        <svg class="breadcrumb-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" stroke-width="2"/>
                        </svg>
                        Referanslar
                    </a>
                    <span>/</span>
                    <span>Yeni Referans</span>
                </div>
            </div>
        </div>
    </div>

    <div class="ai-form-container">
        <div class="form-header">
            <div class="form-header-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" stroke-width="2"/>
                </svg>
            </div>
            <div>
                <h2 class="form-title">Müşteri Bilgileri</h2>
                <p class="form-subtitle">Yeni bir müşteri referansı ekleyin</p>
            </div>
        </div>

        <form asp-action="Create" asp-controller="Testimonial" method="post">
            <div class="form-row">
                <div class="ai-form-group">
                    <label asp-for="Name" class="ai-form-label">
                        <svg class="label-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" stroke-width="2"/>
                        </svg>
                        İsim Soyisim
                    </label>
                    <input asp-for="Name" class="ai-form-input" placeholder="Örn: Ahmet Yılmaz" />
                    <span class="ai-form-helper">
                        <svg class="helper-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <circle cx="12" cy="12" r="10" stroke-width="2"/>
                            <path d="M12 16v-4m0-4h.01" stroke-width="2"/>
                        </svg>
                        Müşterinin tam adını yazın
                    </span>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="ai-form-group">
                    <label asp-for="Title" class="ai-form-label">
                        <svg class="label-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" stroke-width="2"/>
                        </svg>
                        Ünvan / Pozisyon
                    </label>
                    <input asp-for="Title" class="ai-form-input" placeholder="Örn: CEO, ABC Teknoloji" />
                    <span class="ai-form-helper">
                        <svg class="helper-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <circle cx="12" cy="12" r="10" stroke-width="2"/>
                            <path d="M12 16v-4m0-4h.01" stroke-width="2"/>
                        </svg>
                        Müşterinin görev unvanını yazın
                    </span>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>

            <div class="ai-form-group">
                <label asp-for="Comment" class="ai-form-label">
                    <svg class="label-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" stroke-width="2"/>
                    </svg>
                    Yorum / Görüş
                </label>
                <textarea asp-for="Comment" class="ai-form-textarea" placeholder="Müşterinin firma hakkındaki yorumunu yazın..." rows="5"></textarea>
                <span class="ai-form-helper">
                    <svg class="helper-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <circle cx="12" cy="12" r="10" stroke-width="2"/>
                        <path d="M12 16v-4m0-4h.01" stroke-width="2"/>
                    </svg>
                    Müşterinin deneyimini yansıtan gerçek bir yorum yazın
                </span>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="ai-form-group">
                <label asp-for="ImageUrl" class="ai-form-label">
                    <svg class="label-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" stroke-width="2"/>
                    </svg>
                    Fotoğraf URL
                </label>
                <input asp-for="ImageUrl" class="ai-form-input" placeholder="https://example.com/photo.jpg" />
                <span class="ai-form-helper">
                    <svg class="helper-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <circle cx="12" cy="12" r="10" stroke-width="2"/>
                        <path d="M12 16v-4m0-4h.01" stroke-width="2"/>
                    </svg>
                    Müşterinin profil fotoğrafı URL'sini girin
                </span>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="form-info-box">
                <svg class="info-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" stroke-width="2"/>
                </svg>
                <div>
                    <strong>İpucu:</strong> Gerçek müşteri referansları kullanın ve müşteriden onay aldığınızdan emin olun. Profesyonel ve net bir profil fotoğrafı kullanmak, referansın güvenilirliğini artırır.
                </div>
            </div>

            <div class="ai-form-actions">
                <button type="submit" class="ai-btn ai-btn-submit">
                    <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M5 13l4 4L19 7" stroke-width="2.5" stroke-linecap="round"/>
                    </svg>
                    Referansı Kaydet
                </button>
                <a asp-action="Index" asp-controller="Testimonial" class="ai-btn ai-btn-cancel">
                    <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M6 18L18 6M6 6l12 12" stroke-width="2"/>
                    </svg>
                    İptal
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .ai-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #0a0e27 0%, #1a1f3a 100%);
        margin: -30px -45px -100px -45px;
        padding: 60px 40px 100px 40px;
        position: relative;
        overflow: hidden;
        border-radius: 30px 30px 0 0;
    }

    .ai-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: 
            radial-gradient(circle at 20% 30%, rgba(168, 85, 247, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 80% 70%, rgba(139, 92, 246, 0.1) 0%, transparent 50%);
        animation: pulse 8s ease-in-out infinite;
        pointer-events: none;
    }

    @@keyframes pulse {
        0%, 100% { opacity: 0.5; transform: scale(1); }
        50% { opacity: 0.8; transform: scale(1.1); }
    }

    .ai-header {
        position: relative;
        z-index: 10;
        margin-bottom: 40px;
    }

    .ai-header-content {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .ai-icon-wrapper {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 30px rgba(34, 197, 94, 0.4);
    }

    .ai-header-icon {
        width: 36px;
        height: 36px;
        color: white;
    }

    .ai-title {
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
    }

    .ai-breadcrumb {
        display: flex;
        gap: 8px;
        align-items: center;
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.9rem;
        margin-top: 8px;
    }

    .ai-breadcrumb a {
        color: #22c55e;
        text-decoration: none;
        transition: color 0.3s ease;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .ai-breadcrumb a:hover {
        color: #16a34a;
    }

    .breadcrumb-icon {
        width: 16px;
        height: 16px;
    }

    .ai-form-container {
        max-width: 900px;
        margin: 0 auto;
        background: rgba(26, 31, 58, 0.6);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(168, 85, 247, 0.2);
        border-radius: 20px;
        padding: 40px;
        position: relative;
        z-index: 10;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    }

    .form-header {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 35px;
        padding-bottom: 25px;
        border-bottom: 1px solid rgba(168, 85, 247, 0.2);
    }

    .form-header-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #a855f7, #8b5cf6);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .form-header-icon svg {
        width: 32px;
        height: 32px;
        color: white;
    }

    .form-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: white;
        margin: 0;
    }

    .form-subtitle {
        color: rgba(255, 255, 255, 0.6);
        margin: 5px 0 0 0;
        font-size: 0.95rem;
    }

    .form-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .ai-form-group {
        margin-bottom: 0;
    }

    .form-row + .ai-form-group {
        margin-bottom: 30px;
    }

    .ai-form-label {
        display: flex;
        align-items: center;
        gap: 10px;
        color: #ffffff;
        font-weight: 600;
        margin-bottom: 12px;
        font-size: 1rem;
    }

    .label-icon {
        width: 20px;
        height: 20px;
        color: #a855f7;
    }

    .ai-form-input,
    .ai-form-textarea {
        width: 100%;
        padding: 16px 20px;
        background: rgba(10, 14, 39, 0.6);
        border: 2px solid rgba(168, 85, 247, 0.3);
        border-radius: 12px;
        color: #ffffff;
        font-size: 1rem;
        transition: all 0.3s ease;
        outline: none;
        font-family: inherit;
    }

    .ai-form-input:focus,
    .ai-form-textarea:focus {
        border-color: #a855f7;
        box-shadow: 0 0 0 4px rgba(168, 85, 247, 0.15);
        background: rgba(10, 14, 39, 0.8);
    }

    .ai-form-textarea {
        resize: vertical;
        min-height: 120px;
        line-height: 1.6;
    }

    .ai-form-input::placeholder,
    .ai-form-textarea::placeholder {
        color: rgba(255, 255, 255, 0.4);
    }

    .ai-form-helper {
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.5);
        margin-top: 8px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .helper-icon {
        width: 16px;
        height: 16px;
    }

    .text-danger {
        color: #ef4444 !important;
        font-size: 0.85rem;
        margin-top: 8px;
        display: block;
    }

    .input-validation-error {
        border-color: #ef4444 !important;
    }

    .form-info-box {
        background: rgba(34, 197, 94, 0.1);
        border: 1px solid rgba(34, 197, 94, 0.3);
        border-radius: 12px;
        padding: 18px;
        display: flex;
        gap: 15px;
        margin-bottom: 30px;
        color: rgba(255, 255, 255, 0.8);
        line-height: 1.6;
    }

    .info-icon {
        width: 24px;
        height: 24px;
        color: #22c55e;
        flex-shrink: 0;
    }

    .ai-form-actions {
        display: flex;
        gap: 15px;
        margin-top: 35px;
        padding-top: 25px;
        border-top: 1px solid rgba(168, 85, 247, 0.2);
    }

    .ai-btn {
        padding: 14px 32px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

    .btn-icon {
        width: 20px;
        height: 20px;
    }

    .ai-btn-submit {
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        color: white;
        flex: 1;
        justify-content: center;
        box-shadow: 0 4px 20px rgba(34, 197, 94, 0.4);
    }

    .ai-btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(34, 197, 94, 0.6);
    }

    .ai-btn-cancel {
        background: rgba(255, 255, 255, 0.1);
        color: white;
        border: 2px solid rgba(255, 255, 255, 0.2);
        justify-content: center;
    }

    .ai-btn-cancel:hover {
        background: rgba(255, 255, 255, 0.15);
        transform: translateY(-2px);
        color: white;
    }

    @@media (max-width: 768px) {
        .ai-form-container {
            padding: 25px;
        }

        .ai-title {
            font-size: 2rem;
        }

        .ai-header-content {
            flex-direction: column;
            align-items: flex-start;
        }

        .form-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .form-row {
            grid-template-columns: 1fr;
        }

        .ai-form-actions {
            flex-direction: column;
        }
    }
</style>

