@model List<ResultFAQDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="ai-container">
    <div class="ai-header">
        <div class="ai-header-content">
            <div class="ai-icon-wrapper">
                <svg class="ai-header-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <circle cx="12" cy="12" r="10" stroke-width="2" />
                    <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3" stroke-width="2" />
                    <circle cx="12" cy="17" r="0.5" fill="currentColor" stroke="none" />
                </svg>
            </div>
            <div>
                <h1 class="ai-title">Sık Sorulan Sorular</h1>
                <p class="ai-subtitle">Tüm SSS'leri görüntüleyin ve yönetin</p>
            </div>
        </div>
        <a asp-action="Create" asp-controller="FAQ" class="ai-btn-primary">
            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <line x1="12" y1="5" x2="12" y2="19" stroke-width="2" />
                <line x1="5" y1="12" x2="19" y2="12" stroke-width="2" />
            </svg>
            Yeni Soru Ekle
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="ai-stats">
            <div class="ai-stat-card">
                <div class="stat-icon stat-icon-purple">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M9 11l3 3L22 4" stroke-width="2" />
                        <path d="M21 12v7a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11" stroke-width="2" />
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@Model.Count</div>
                    <div class="stat-label">Toplam Soru</div>
                </div>
            </div>

            <div class="ai-stat-card">
                <div class="stat-icon stat-icon-blue">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <circle cx="12" cy="12" r="10" stroke-width="2" />
                        <path d="M12 6v6l4 2" stroke-width="2" />
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-value">Aktif</div>
                    <div class="stat-label">Durum</div>
                </div>
            </div>
        </div>

        <div class="ai-faq-list">
            @foreach (var item in Model)
            {
                <div class="ai-faq-card">
                    <div class="faq-card-header">
                        <div class="faq-number">#@item.Id</div>
                        <div class="faq-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <circle cx="12" cy="12" r="10" stroke-width="2" />
                                <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3" stroke-width="2" />
                                <circle cx="12" cy="17" r="0.5" fill="currentColor" stroke="none" />
                            </svg>
                        </div>
                    </div>

                    <div class="faq-question">
                        <svg class="question-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" stroke-width="2" />
                        </svg>
                        <h3>@item.Question</h3>
                    </div>

                    <div class="faq-answer">
                        <svg class="answer-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke-width="2" />
                        </svg>
                        <p>@item.Answer</p>
                    </div>

                    <div class="faq-actions">
                        <a asp-action="Update" asp-controller="FAQ" asp-route-id="@item.Id" class="ai-btn ai-btn-edit">
                            <svg class="btn-icon-sm" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7" stroke-width="2" />
                                <path d="M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z" stroke-width="2" />
                            </svg>
                            Düzenle
                        </a>
                        <a asp-action="Delete" asp-controller="FAQ" asp-route-id="@item.Id" class="ai-btn ai-btn-delete">
                            <svg class="btn-icon-sm" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" stroke-width="2" />
                            </svg>
                            Sil
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="ai-empty-state">
            <div class="empty-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <circle cx="12" cy="12" r="10" stroke-width="2" />
                    <path d="M8 15h8M9 9h.01M15 9h.01" stroke-width="2" />
                </svg>
            </div>
            <h3>Henüz Soru Yok</h3>
            <p>Yeni soru eklemek için yukarıdaki "Yeni Soru Ekle" butonuna tıklayın.</p>
        </div>
    }
</div>

<style>
    .ai-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #0a0e27 0%, #1a1f3a 100%);
        margin: -30px -45px -100px -45px;
        padding: 60px 40px 100px 40px;
        position: relative;
        overflow: hidden;
        border-radius: 30px 30px 0 0;
    }

        .ai-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: radial-gradient(circle at 20% 30%, rgba(99, 102, 241, 0.1) 0%, transparent 50%), radial-gradient(circle at 80% 70%, rgba(139, 92, 246, 0.1) 0%, transparent 50%);
            animation: pulse 8s ease-in-out infinite;
            pointer-events: none;
        }

    @@keyframes pulse {
        0%, 100% {
            opacity: 0.5;
            transform: scale(1);
        }

        50% {
            opacity: 0.8;
            transform: scale(1.1);
        }
    }

    .ai-header {
        position: relative;
        z-index: 10;
        margin-bottom: 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
    }

    .ai-header-content {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .ai-icon-wrapper {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 30px rgba(99, 102, 241, 0.4);
    }

    .ai-header-icon {
        width: 36px;
        height: 36px;
        color: white;
    }

    .ai-title {
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
    }

    .ai-subtitle {
        color: rgba(255, 255, 255, 0.6);
        margin: 5px 0 0 0;
        font-size: 1rem;
    }

    .ai-btn-primary {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        border: none;
        padding: 14px 28px;
        border-radius: 12px;
        color: white;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(99, 102, 241, 0.4);
    }

        .ai-btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 30px rgba(99, 102, 241, 0.6);
            color: white;
        }

    .btn-icon {
        width: 20px;
        height: 20px;
    }

    .ai-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
        position: relative;
        z-index: 10;
    }

    .ai-stat-card {
        background: rgba(26, 31, 58, 0.6);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(99, 102, 241, 0.2);
        border-radius: 16px;
        padding: 25px;
        display: flex;
        align-items: center;
        gap: 20px;
        transition: all 0.3s ease;
    }

        .ai-stat-card:hover {
            transform: translateY(-4px);
            border-color: rgba(99, 102, 241, 0.4);
            box-shadow: 0 10px 30px rgba(99, 102, 241, 0.2);
        }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

        .stat-icon svg {
            width: 28px;
            height: 28px;
            color: white;
        }

    .stat-icon-purple {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
    }

    .stat-icon-blue {
        background: linear-gradient(135deg, #3b82f6, #2563eb);
    }

    .stat-content {
        flex: 1;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: white;
        margin-bottom: 5px;
    }

    .stat-label {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.6);
    }

    .ai-faq-list {
        display: grid;
        gap: 25px;
        position: relative;
        z-index: 10;
    }

    .ai-faq-card {
        background: rgba(26, 31, 58, 0.6);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(99, 102, 241, 0.2);
        border-radius: 20px;
        padding: 30px;
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
    }

        .ai-faq-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
            opacity: 0;
            transition: opacity 0.4s ease;
        }

        .ai-faq-card:hover {
            transform: translateY(-4px);
            border-color: rgba(99, 102, 241, 0.4);
            box-shadow: 0 15px 50px rgba(99, 102, 241, 0.3);
        }

            .ai-faq-card:hover::before {
                opacity: 1;
            }

    .faq-card-header {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 20px;
        position: relative;
        z-index: 2;
    }

    .faq-number {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        color: white;
        padding: 6px 16px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 0.9rem;
    }

    .faq-icon {
        width: 40px;
        height: 40px;
        background: rgba(99, 102, 241, 0.2);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .faq-icon svg {
            width: 24px;
            height: 24px;
            color: #6366f1;
        }

    .faq-question {
        display: flex;
        align-items: flex-start;
        gap: 15px;
        margin-bottom: 20px;
        position: relative;
        z-index: 2;
    }

    .question-icon {
        width: 28px;
        height: 28px;
        color: #6366f1;
        flex-shrink: 0;
        margin-top: 2px;
    }

    .faq-question h3 {
        color: white;
        font-size: 1.3rem;
        font-weight: 600;
        margin: 0;
        line-height: 1.5;
    }

    .faq-answer {
        display: flex;
        align-items: flex-start;
        gap: 15px;
        padding: 20px;
        background: rgba(10, 14, 39, 0.4);
        border-radius: 12px;
        border-left: 3px solid #6366f1;
        margin-bottom: 20px;
        position: relative;
        z-index: 2;
    }

    .answer-icon {
        width: 24px;
        height: 24px;
        color: #8b5cf6;
        flex-shrink: 0;
        margin-top: 2px;
    }

    .faq-answer p {
        color: rgba(255, 255, 255, 0.8);
        margin: 0;
        line-height: 1.7;
        font-size: 1rem;
    }

    .faq-actions {
        display: flex;
        gap: 12px;
        justify-content: flex-end;
        position: relative;
        z-index: 2;
    }

    .ai-btn {
        padding: 10px 20px;
        border-radius: 10px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-icon-sm {
        width: 18px;
        height: 18px;
    }

    .ai-btn-edit {
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        color: white;
    }

        .ai-btn-edit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
            color: white;
        }

    .ai-btn-delete {
        background: linear-gradient(135deg, #ef4444, #dc2626);
        color: white;
    }

        .ai-btn-delete:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(239, 68, 68, 0.4);
            color: white;
        }

    .ai-empty-state {
        text-align: center;
        padding: 80px 20px;
        position: relative;
        z-index: 10;
    }

    .empty-icon {
        width: 120px;
        height: 120px;
        margin: 0 auto 30px;
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.2), rgba(139, 92, 246, 0.2));
        border-radius: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .empty-icon svg {
            width: 60px;
            height: 60px;
            color: #6366f1;
        }

    .ai-empty-state h3 {
        color: white;
        font-size: 1.8rem;
        margin-bottom: 15px;
    }

    .ai-empty-state p {
        color: rgba(255, 255, 255, 0.6);
        font-size: 1.1rem;
    }

    @@media (max-width: 768px) {
        .ai-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .ai-header-content {
            flex-direction: column;
            align-items: flex-start;
        }

        .ai-title {
            font-size: 2rem;
        }

        .faq-actions {
            flex-direction: column;
        }
    }
</style>

