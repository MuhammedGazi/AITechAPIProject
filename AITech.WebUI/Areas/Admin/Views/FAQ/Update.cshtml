@model UpdateFAQDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="ai-container">
    <div class="ai-header">
        <div class="ai-header-content">
            <div class="ai-icon-wrapper">
                <svg class="ai-header-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7" stroke-width="2" />
                    <path d="M18.5 2.5a2.121 2.121 0 013 3L12 15l-4 1 1-4 9.5-9.5z" stroke-width="2" />
                </svg>
            </div>
            <div>
                <h1 class="ai-title">Soruyu Düzenle</h1>
                <div class="ai-breadcrumb">
                    <a asp-action="Index" asp-controller="FAQ">
                        <svg class="breadcrumb-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" stroke-width="2" />
                        </svg>
                        SSS Yönetimi
                    </a>
                    <span>/</span>
                    <span>Düzenle #@Model.Id</span>
                </div>
            </div>
        </div>
        <div class="ai-update-badge">
            <svg class="badge-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" stroke-width="2" />
            </svg>
            Düzenleme Modu
        </div>
    </div>

    <div class="ai-form-container">
        <div class="form-header">
            <div class="form-header-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <circle cx="12" cy="12" r="10" stroke-width="2" />
                    <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3" stroke-width="2" />
                    <circle cx="12" cy="17" r="0.5" fill="currentColor" stroke="none" />
                </svg>
            </div>
            <div>
                <h2 class="form-title">Soru Bilgileri</h2>
                <p class="form-subtitle">Mevcut soruyu güncelleyin</p>
            </div>
        </div>

        <form asp-action="Update" asp-controller="FAQ" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="ai-id-card">
                <div class="id-card-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14" stroke-width="2" />
                    </svg>
                </div>
                <div>
                    <div class="id-label">Soru ID</div>
                    <div class="id-value">#@Model.Id</div>
                </div>
            </div>

            <div class="ai-form-group">
                <label asp-for="Question" class="ai-form-label">
                    <svg class="label-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" stroke-width="2" />
                    </svg>
                    Soru
                </label>
                <div class="input-wrapper">
                    <input asp-for="Question" class="ai-form-input" placeholder="Örn: AI Tech'in vizyonu nedir?" />
                    <div class="input-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" stroke-width="2" />
                        </svg>
                    </div>
                </div>
                <span class="ai-form-helper">
                    <svg class="helper-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <circle cx="12" cy="12" r="10" stroke-width="2" />
                        <path d="M12 16v-4m0-4h.01" stroke-width="2" />
                    </svg>
                    Kullanıcıların sıkça sorduğu soruyu yazın
                </span>
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>

            <div class="ai-form-group">
                <label asp-for="Answer" class="ai-form-label">
                    <svg class="label-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke-width="2" />
                    </svg>
                    Cevap
                </label>
                <div class="textarea-wrapper">
                    <textarea asp-for="Answer" class="ai-form-textarea" placeholder="Sorunun detaylı cevabını yazın..." rows="6"></textarea>
                    <div class="textarea-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" stroke-width="2" />
                        </svg>
                    </div>
                </div>
                <span class="ai-form-helper">
                    <svg class="helper-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <circle cx="12" cy="12" r="10" stroke-width="2" />
                        <path d="M12 16v-4m0-4h.01" stroke-width="2" />
                    </svg>
                    Net ve anlaşılır bir cevap yazın
                </span>
                <span asp-validation-for="Answer" class="text-danger"></span>
            </div>

            <div class="form-info-box">
                <svg class="info-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" stroke-width="2" />
                </svg>
                <div>
                    <strong>Güncelleme Notu:</strong> Yaptığınız değişiklikler anında kaydedilecek ve kullanıcılar güncel bilgileri görecektir.
                </div>
            </div>

            <div class="ai-form-actions">
                <button type="submit" class="ai-btn ai-btn-submit">
                    <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M5 13l4 4L19 7" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                    Değişiklikleri Kaydet
                </button>
                <a asp-action="Index" asp-controller="FAQ" class="ai-btn ai-btn-cancel">
                    <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M6 18L18 6M6 6l12 12" stroke-width="2" />
                    </svg>
                    İptal
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .ai-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #0a0e27 0%, #1a1f3a 100%);
        margin: -30px -45px -100px -45px;
        padding: 60px 40px 100px 40px;
        position: relative;
        overflow: hidden;
        border-radius: 30px 30px 0 0;
    }

        .ai-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: radial-gradient(circle at 20% 30%, rgba(99, 102, 241, 0.1) 0%, transparent 50%), radial-gradient(circle at 80% 70%, rgba(139, 92, 246, 0.1) 0%, transparent 50%);
            animation: pulse 8s ease-in-out infinite;
            pointer-events: none;
        }

    @@keyframes pulse {
        0%, 100% {
            opacity: 0.5;
            transform: scale(1);
        }

        50% {
            opacity: 0.8;
            transform: scale(1.1);
        }
    }

    .ai-header {
        position: relative;
        z-index: 10;
        margin-bottom: 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
    }

    .ai-header-content {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .ai-icon-wrapper {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 30px rgba(59, 130, 246, 0.4);
    }

    .ai-header-icon {
        width: 36px;
        height: 36px;
        color: white;
    }

    .ai-title {
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
    }

    .ai-breadcrumb {
        display: flex;
        gap: 8px;
        align-items: center;
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.9rem;
        margin-top: 8px;
    }

        .ai-breadcrumb a {
            color: #3b82f6;
            text-decoration: none;
            transition: color 0.3s ease;
            display: flex;
            align-items: center;
            gap: 6px;
        }

            .ai-breadcrumb a:hover {
                color: #2563eb;
            }

    .breadcrumb-icon {
        width: 16px;
        height: 16px;
    }

    .ai-update-badge {
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        color: white;
        padding: 10px 20px;
        border-radius: 12px;
        font-size: 0.9rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 4px 20px rgba(59, 130, 246, 0.3);
    }

    .badge-icon {
        width: 18px;
        height: 18px;
    }

    .ai-form-container {
        max-width: 900px;
        margin: 0 auto;
        background: rgba(26, 31, 58, 0.6);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(99, 102, 241, 0.2);
        border-radius: 20px;
        padding: 40px;
        position: relative;
        z-index: 10;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    }

    .form-header {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 35px;
        padding-bottom: 25px;
        border-bottom: 1px solid rgba(99, 102, 241, 0.2);
    }

    .form-header-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

        .form-header-icon svg {
            width: 32px;
            height: 32px;
            color: white;
        }

    .form-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: white;
        margin: 0;
    }

    .form-subtitle {
        color: rgba(255, 255, 255, 0.6);
        margin: 5px 0 0 0;
        font-size: 0.95rem;
    }

    .ai-id-card {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(37, 99, 235, 0.2));
        border: 2px solid rgba(59, 130, 246, 0.4);
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .id-card-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

        .id-card-icon svg {
            width: 26px;
            height: 26px;
            color: white;
        }

    .id-label {
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.85rem;
        margin-bottom: 4px;
    }

    .id-value {
        color: white;
        font-size: 1.4rem;
        font-weight: 700;
    }

    .ai-form-group {
        margin-bottom: 30px;
    }

    .ai-form-label {
        display: flex;
        align-items: center;
        gap: 10px;
        color: #ffffff;
        font-weight: 600;
        margin-bottom: 12px;
        font-size: 1rem;
    }

    .label-icon {
        width: 20px;
        height: 20px;
        color: #6366f1;
    }

    .input-wrapper,
    .textarea-wrapper {
        position: relative;
    }

    .ai-form-input,
    .ai-form-textarea {
        width: 100%;
        padding: 16px 50px 16px 20px;
        background: rgba(10, 14, 39, 0.6);
        border: 2px solid rgba(99, 102, 241, 0.3);
        border-radius: 12px;
        color: #ffffff;
        font-size: 1rem;
        transition: all 0.3s ease;
        outline: none;
        font-family: inherit;
    }

        .ai-form-input:focus,
        .ai-form-textarea:focus {
            border-color: #6366f1;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.15);
            background: rgba(10, 14, 39, 0.8);
        }

    .ai-form-textarea {
        resize: vertical;
        min-height: 150px;
        line-height: 1.6;
    }

    .input-icon,
    .textarea-icon {
        position: absolute;
        right: 16px;
        top: 50%;
        transform: translateY(-50%);
        width: 20px;
        height: 20px;
        color: rgba(99, 102, 241, 0.5);
        pointer-events: none;
    }

    .textarea-icon {
        top: 20px;
        transform: none;
    }

        .input-icon svg,
        .textarea-icon svg {
            width: 100%;
            height: 100%;
        }

    .ai-form-input::placeholder,
    .ai-form-textarea::placeholder {
        color: rgba(255, 255, 255, 0.4);
    }

    .ai-form-helper {
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.5);
        margin-top: 8px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .helper-icon {
        width: 16px;
        height: 16px;
    }

    .text-danger {
        color: #ef4444 !important;
        font-size: 0.85rem;
        margin-top: 8px;
        display: block;
    }

    .input-validation-error {
        border-color: #ef4444 !important;
    }

    .form-info-box {
        background: rgba(59, 130, 246, 0.1);
        border: 1px solid rgba(59, 130, 246, 0.3);
        border-radius: 12px;
        padding: 18px;
        display: flex;
        gap: 15px;
        margin-bottom: 30px;
        color: rgba(255, 255, 255, 0.8);
        line-height: 1.6;
    }

    .info-icon {
        width: 24px;
        height: 24px;
        color: #3b82f6;
        flex-shrink: 0;
    }

    .ai-form-actions {
        display: flex;
        gap: 15px;
        margin-top: 35px;
        padding-top: 25px;
        border-top: 1px solid rgba(99, 102, 241, 0.2);
    }

    .ai-btn {
        padding: 14px 32px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

    .btn-icon {
        width: 20px;
        height: 20px;
    }

    .ai-btn-submit {
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        color: white;
        flex: 1;
        justify-content: center;
        box-shadow: 0 4px 20px rgba(59, 130, 246, 0.4);
    }

        .ai-btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 30px rgba(59, 130, 246, 0.6);
        }

    .ai-btn-cancel {
        background: rgba(255, 255, 255, 0.1);
        color: white;
        border: 2px solid rgba(255, 255, 255, 0.2);
        justify-content: center;
    }

        .ai-btn-cancel:hover {
            background: rgba(255, 255, 255, 0.15);
            transform: translateY(-2px);
            color: white;
        }

    @@media (max-width: 768px) {
        .ai-form-container {
            padding: 25px;
        }

        .ai-title {
            font-size: 2rem;
        }

        .ai-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .ai-header-content {
            flex-direction: column;
            align-items: flex-start;
        }

        .form-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .ai-form-actions {
            flex-direction: column;
        }
    }
</style>

