@model UpdateAboutDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="ai-container">
    <!-- Header -->
    <div class="ai-page-header">
        <nav class="ai-breadcrumb">
            <a asp-action="Index" asp-controller="About">Hakkımızda Yönetimi</a>
            <span class="ai-breadcrumb-sep">/</span>
            <span>Güncelle</span>
        </nav>
        <h1 class="ai-page-title">
            <span class="ai-icon-wrapper-sm">
                <i class="bi bi-pencil-fill"></i>
            </span>
            Bilgiyi Güncelle
        </h1>
        <p class="ai-page-subtitle">ID: <strong>@Model.Id</strong></p>
    </div>

    <div class="ai-form-grid">
        <!-- Main Form -->
        <div class="ai-form-section">
            <div class="ai-form-card">
                <div class="ai-form-card-header">
                    <h2 class="ai-form-title">
                        <i class="bi bi-pencil-square"></i>
                        Bilgi Detayları
                    </h2>
                </div>

                <div class="ai-form-card-body">
                    <form asp-action="Update" asp-controller="About" asp-route-id="@Model.Id" method="post" class="ai-form">
                        <!-- Title Field -->
                        <div class="ai-form-group">
                            <label asp-for="Title" class="ai-form-label">
                                Başlık <span class="ai-required">*</span>
                            </label>
                            <div class="ai-input-wrapper">
                                <i class="bi bi-type"></i>
                                <input asp-for="Title" type="text" class="ai-form-input"
                                       placeholder="Örn: Misyon, Vizyon, Değerler..."
                                       required>
                            </div>
                            <span asp-validation-for="Title" class="ai-validation-error"></span>
                            <p class="ai-input-help">
                                <i class="bi bi-info-circle"></i>
                                Maksimum 100 karakter
                            </p>
                        </div>

                        <!-- Description Field -->
                        <div class="ai-form-group">
                            <label asp-for="Description" class="ai-form-label">
                                Açıklama <span class="ai-required">*</span>
                            </label>
                            <div class="ai-input-wrapper ai-textarea-wrapper">
                                <i class="bi bi-file-text"></i>
                                <textarea asp-for="Description" class="ai-form-textarea"
                                          placeholder="Detaylı açıklamayı yazın..."
                                          rows="5"
                                          required></textarea>
                            </div>
                            <span asp-validation-for="Description" class="ai-validation-error"></span>
                            <p class="ai-input-help">
                                <i class="bi bi-info-circle"></i>
                                Maksimum 500 karakter
                            </p>
                        </div>

                        <!-- Image URL Field -->
                        <div class="ai-form-group">
                            <label asp-for="ImageUrl" class="ai-form-label">
                                Resim URL'i <span class="ai-optional">(İsteğe bağlı)</span>
                            </label>
                            <div class="ai-input-wrapper">
                                <i class="bi bi-image"></i>
                                <input asp-for="ImageUrl" type="url" class="ai-form-input"
                                       placeholder="https://example.com/image.jpg">
                            </div>
                            <span asp-validation-for="ImageUrl" class="ai-validation-error"></span>
                            <p class="ai-input-help">
                                <i class="bi bi-info-circle"></i>
                                Geçerli bir resim URL'i girin
                            </p>
                        </div>

                        <!-- Status Alert -->
                        <div class="ai-status-alert">
                            <i class="bi bi-check-circle"></i>
                            <div>
                                <strong>Aktif Durumda</strong>
                                <p>Bu öğe yayında ve ziyaretçiler tarafından görülebilir</p>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="ai-form-actions">
                            <button type="submit" class="ai-btn ai-btn-primary ai-btn-lg">
                                <i class="bi bi-check-circle"></i>
                                <span>Değişiklikleri Kaydet</span>
                            </button>
                            <a asp-action="Index" asp-controller="About" class="ai-btn ai-btn-secondary ai-btn-lg">
                                <i class="bi bi-x-circle"></i>
                                <span>İptal</span>
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Danger Zone -->
            <div class="ai-danger-card">
                <div class="ai-danger-header">
                    <i class="bi bi-exclamation-triangle"></i>
                    <h2>Tehlikeli Bölge</h2>
                </div>
                <div class="ai-danger-body">
                    <p>Bu bölümdeki işlemler geri alınamaz ve verileri kalıcı olarak etkileyebilir.</p>
                    <button type="button" class="ai-btn ai-btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash"></i>
                        <span>Bu Öğeyi Sil</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Sidebar Info -->
        <div class="ai-sidebar">
            <!-- Image Preview Card -->
            <div class="ai-info-card">
                <div class="ai-info-card-header ai-info-preview">
                    <i class="bi bi-image"></i>
                    <h3>Resim Önizleme</h3>
                </div>
                <div class="ai-info-card-body ai-image-preview-body">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Title" class="ai-preview-img">
                    }
                    else
                    {
                        <div class="ai-preview-placeholder">
                            <i class="bi bi-image"></i>
                            <p>Resim yok</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Metadata Card -->
            <div class="ai-info-card">
                <div class="ai-info-card-header ai-info-metadata">
                    <i class="bi bi-file-text"></i>
                    <h3>Bilgiler</h3>
                </div>
                <div class="ai-info-card-body">
                    <div class="ai-meta-row">
                        <span class="ai-meta-label">Öğe ID</span>
                        <span class="ai-meta-value">@Model.Id</span>
                    </div>

                    <div class="ai-meta-row">
                        <span class="ai-meta-label">Durum</span>
                        <span class="ai-status-badge ai-status-active">Aktif</span>
                    </div>

                    <hr class="ai-divider">

                    <div class="ai-meta-row">
                        <span class="ai-meta-label">Başlık</span>
                        <span class="ai-meta-value">@Model.Title</span>
                    </div>
                </div>
            </div>

            <!-- Activity Card -->
            <div class="ai-info-card">
                <div class="ai-info-card-header ai-info-activity">
                    <i class="bi bi-clock-history"></i>
                    <h3>Aktivite</h3>
                </div>
                <div class="ai-info-card-body">
                    <div class="ai-activity-item">
                        <i class="bi bi-calendar"></i>
                        <div>
                            <span class="ai-activity-label">Oluşturulma</span>
                            <p>Bilgi Yok</p>
                        </div>
                    </div>

                    <div class="ai-activity-item">
                        <i class="bi bi-calendar"></i>
                        <div>
                            <span class="ai-activity-label">Son Güncelleme</span>
                            <p>Bilgi Yok</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Help Card -->
            <div class="ai-info-card">
                <div class="ai-info-card-header ai-info-help">
                    <i class="bi bi-question-circle"></i>
                    <h3>Yardım</h3>
                </div>
                <div class="ai-info-card-body">
                    <p class="ai-help-text">
                        Değişiklikleri kaydetmek için yukarıdaki butona tıklayın. Sil seçeneği ile öğeyi kalıcı olarak silebilirsiniz.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade ai-modal" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content ai-modal-content">
            <div class="ai-modal-header">
                <h5 class="ai-modal-title">
                    <i class="bi bi-exclamation-triangle"></i>
                    Silme Onayı
                </h5>
                <button type="button" class="ai-modal-close" data-bs-dismiss="modal">
                    <i class="bi bi-x"></i>
                </button>
            </div>
            <div class="ai-modal-body">
                <p>
                    <strong>@Model.Title</strong> başlıklı öğeyi silmek istediğinizden emin misiniz?
                </p>
                <div class="ai-warning-box">
                    <i class="bi bi-exclamation-triangle"></i>
                    Bu işlem geri alınamaz ve tüm ilişkili veriler silinecektir!
                </div>
            </div>
            <div class="ai-modal-footer">
                <button type="button" class="ai-btn ai-btn-secondary" data-bs-dismiss="modal">
                    İptal
                </button>
                <form asp-action="Delete" asp-controller="About" asp-route-id="@Model.Id" method="post" style="display:inline;">
                    <button type="submit" class="ai-btn ai-btn-danger">
                        <i class="bi bi-trash"></i> Kalıcı Olarak Sil
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --ai-primary: #0066ff;
        --ai-secondary: #00d9ff;
        --ai-dark: #0a0e27;
        --ai-darker: #050810;
        --ai-light: #f0f4ff;
        --ai-border: #1a2344;
        --ai-success: #00ff88;
        --ai-danger: #ff3366;
        --ai-warning: #ffaa00;
    }

    .ai-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #0a0e27 0%, #1a1f3a 100%);
        margin: -30px -45px -100px -45px;
        padding: 60px 40px 100px 40px;
        position: relative;
        overflow: hidden;
        border-radius: 30px 30px 0 0;
    }

        .ai-container::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 20% 50%, rgba(0, 102, 255, 0.1) 0%, transparent 50%), radial-gradient(circle at 80% 80%, rgba(0, 217, 255, 0.1) 0%, transparent 50%);
            pointer-events: none;
            z-index: -1;
        }

    @@keyframes fadeInLeft {
        from {
            opacity: 0;
            transform: translateX(-30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @@keyframes fadeInRight {
        from {
            opacity: 0;
            transform: translateX(30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    /* Page Header */
    .ai-page-header {
        margin-bottom: 50px;
    }

    .ai-breadcrumb {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 20px;
        font-size: 0.95rem;
    }

        .ai-breadcrumb a {
            color: #0066ff;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .ai-breadcrumb a:hover {
                color: #00d9ff;
            }

    .ai-breadcrumb-sep {
        color: #718096;
    }

    .ai-breadcrumb span {
        color: #a0aec0;
    }

    .ai-page-title {
        font-size: 3rem;
        font-weight: 800;
        background: linear-gradient(135deg, #00d9ff 0%, #0066ff 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0 0 15px 0;
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .ai-icon-wrapper-sm {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, #0066ff 0%, #00d9ff 100%);
        border-radius: 16px;
        font-size: 2rem;
        color: white;
        box-shadow: 0 0 30px rgba(0, 102, 255, 0.3);
    }

    .ai-page-subtitle {
        color: #a0aec0;
        font-size: 1.1rem;
        margin: 0;
    }

    /* Form Grid */
    .ai-form-grid {
        display: grid;
        grid-template-columns: 1fr 320px;
        gap: 40px;
    }

    /* Form Section */
    .ai-form-section {
        animation: fadeInLeft 0.5s ease;
        display: flex;
        flex-direction: column;
        gap: 24px;
    }

    .ai-form-card {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid #1a2344;
        border-radius: 16px;
        overflow: hidden;
        backdrop-filter: blur(10px);
    }

    .ai-form-card-header {
        padding: 28px;
        border-bottom: 1px solid #1a2344;
        background: linear-gradient(135deg, rgba(0, 102, 255, 0.1) 0%, transparent 100%);
    }

    .ai-form-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: white;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .ai-form-card-body {
        padding: 36px;
    }

    .ai-form {
        display: flex;
        flex-direction: column;
        gap: 28px;
    }

    /* Form Groups */
    .ai-form-group {
        display: flex;
        flex-direction: column;
    }

    .ai-form-label {
        color: white;
        font-weight: 600;
        margin-bottom: 12px;
        font-size: 1rem;
    }

    .ai-required {
        color: #ff3366;
    }

    .ai-optional {
        color: #718096;
        font-weight: 400;
        font-size: 0.9rem;
    }

    .ai-input-wrapper {
        position: relative;
        display: flex;
        align-items: flex-start;
    }

    .ai-textarea-wrapper {
        align-items: flex-start;
    }

    .ai-input-wrapper i {
        position: absolute;
        left: 16px;
        top: 14px;
        color: #0066ff;
        font-size: 1.2rem;
    }

    .ai-form-input {
        width: 100%;
        padding: 14px 16px 14px 48px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid #1a2344;
        border-radius: 12px;
        color: white;
        font-size: 1rem;
        transition: all 0.3s ease;
        font-family: inherit;
    }

    .ai-form-textarea {
        width: 100%;
        padding: 14px 16px 14px 48px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid #1a2344;
        border-radius: 12px;
        color: white;
        font-size: 1rem;
        transition: all 0.3s ease;
        font-family: inherit;
        resize: vertical;
    }

        .ai-form-input:focus,
        .ai-form-textarea:focus {
            outline: none;
            border-color: #0066ff;
            background: rgba(0, 102, 255, 0.1);
            box-shadow: 0 0 20px rgba(0, 102, 255, 0.2);
        }

        .ai-form-input::placeholder,
        .ai-form-textarea::placeholder {
            color: #718096;
        }

    .ai-validation-error {
        color: #ff3366;
        font-size: 0.85rem;
        margin-top: 8px;
        display: block;
    }

    .ai-input-help {
        color: #718096;
        font-size: 0.85rem;
        margin-top: 8px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    /* Status Alert */
    .ai-status-alert {
        background: rgba(0, 255, 136, 0.15);
        border: 1px solid rgba(0, 255, 136, 0.3);
        border-radius: 12px;
        padding: 20px;
        display: flex;
        align-items: flex-start;
        gap: 16px;
        color: #00ff88;
    }

        .ai-status-alert i {
            font-size: 1.5rem;
            margin-top: 2px;
        }

        .ai-status-alert strong {
            display: block;
            color: white;
            margin-bottom: 4px;
        }

        .ai-status-alert p {
            margin: 0;
            font-size: 0.9rem;
        }

    /* Form Actions */
    .ai-form-actions {
        display: flex;
        gap: 12px;
        margin-top: 12px;
    }

    .ai-btn {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        padding: 14px 32px;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        font-size: 1rem;
    }

    .ai-btn-lg {
        padding: 16px 32px;
        font-size: 1rem;
    }

    .ai-btn-primary {
        background: linear-gradient(135deg, #0066ff 0%, #00d9ff 100%);
        color: white;
        box-shadow: 0 0 30px rgba(0, 102, 255, 0.4);
    }

        .ai-btn-primary:hover {
            transform: translateY(-4px);
            box-shadow: 0 0 50px rgba(0, 102, 255, 0.6);
        }

    .ai-btn-secondary {
        background: rgba(255, 255, 255, 0.1);
        color: #00d9ff;
        border: 1px solid #00d9ff;
    }

        .ai-btn-secondary:hover {
            background: rgba(0, 217, 255, 0.1);
            box-shadow: 0 0 20px rgba(0, 217, 255, 0.3);
        }

    .ai-btn-danger {
        background: #ff3366;
        color: white;
    }

        .ai-btn-danger:hover {
            background: #ff1a52;
            box-shadow: 0 0 20px rgba(255, 51, 102, 0.4);
        }

    /* Danger Card */
    .ai-danger-card {
        background: rgba(255, 51, 102, 0.05);
        border: 1px solid rgba(255, 51, 102, 0.3);
        border-radius: 16px;
        overflow: hidden;
    }

    .ai-danger-header {
        padding: 20px 28px;
        background: linear-gradient(135deg, rgba(255, 51, 102, 0.2) 0%, transparent 100%);
        border-bottom: 1px solid rgba(255, 51, 102, 0.3);
        display: flex;
        align-items: center;
        gap: 12px;
        color: #ff3366;
    }

        .ai-danger-header i {
            font-size: 1.5rem;
        }

        .ai-danger-header h2 {
            margin: 0;
            font-size: 1.2rem;
            font-weight: 700;
        }

    .ai-danger-body {
        padding: 24px 28px;
        color: #a0aec0;
    }

        .ai-danger-body p {
            margin: 0 0 16px 0;
        }

    /* Sidebar */
    .ai-sidebar {
        animation: fadeInRight 0.5s ease;
        display: flex;
        flex-direction: column;
        gap: 24px;
    }

    /* Info Cards */
    .ai-info-card {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid #1a2344;
        border-radius: 12px;
        overflow: hidden;
        backdrop-filter: blur(10px);
    }

    .ai-info-card-header {
        padding: 16px 20px;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 1rem;
        font-weight: 600;
    }

    .ai-info-preview {
        background: rgba(0, 102, 255, 0.1);
        border-bottom: 1px solid rgba(0, 102, 255, 0.2);
        color: #0066ff;
    }

    .ai-info-metadata {
        background: rgba(0, 102, 255, 0.1);
        border-bottom: 1px solid rgba(0, 102, 255, 0.2);
        color: #0066ff;
    }

    .ai-info-activity {
        background: rgba(0, 217, 255, 0.1);
        border-bottom: 1px solid rgba(0, 217, 255, 0.2);
        color: #00d9ff;
    }

    .ai-info-help {
        background: rgba(255, 170, 0, 0.1);
        border-bottom: 1px solid rgba(255, 170, 0, 0.2);
        color: #ffaa00;
    }

    .ai-info-card-header h3 {
        margin: 0;
        font-size: 1rem;
    }

    .ai-info-card-body {
        padding: 16px 20px;
        font-size: 0.9rem;
        color: #a0aec0;
    }

    .ai-image-preview-body {
        padding: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .ai-preview-img {
        width: 100%;
        height: auto;
        max-height: 200px;
        object-fit: cover;
        border-radius: 8px;
    }

    .ai-preview-placeholder {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 30px 20px;
        text-align: center;
        color: #718096;
    }

        .ai-preview-placeholder i {
            font-size: 2rem;
            margin-bottom: 8px;
            color: #0066ff;
        }

        .ai-preview-placeholder p {
            margin: 0;
            font-size: 0.9rem;
        }

    /* Metadata */
    .ai-meta-row {
        display: flex;
        flex-direction: column;
        margin-bottom: 12px;
    }

    .ai-meta-label {
        font-size: 0.8rem;
        color: #718096;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 4px;
    }

    .ai-meta-value {
        font-weight: 600;
        color: white;
        word-break: break-word;
    }

    .ai-status-badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 0.8rem;
        font-weight: 600;
        width: fit-content;
    }

    .ai-status-active {
        background: rgba(0, 255, 136, 0.2);
        color: #00ff88;
    }

    /* Activity */
    .ai-activity-item {
        display: flex;
        gap: 12px;
        margin-bottom: 16px;
    }

        .ai-activity-item i {
            color: #0066ff;
            font-size: 1.2rem;
            margin-top: 2px;
            flex-shrink: 0;
        }

        .ai-activity-item div {
            flex: 1;
        }

    .ai-activity-label {
        font-size: 0.8rem;
        color: #718096;
        text-transform: uppercase;
        display: block;
        margin-bottom: 4px;
    }

    .ai-activity-item p {
        margin: 0;
        color: white;
        font-weight: 500;
    }

    .ai-help-text {
        margin: 0;
        font-size: 0.9rem;
        line-height: 1.5;
    }

    .ai-divider {
        border: none;
        border-top: 1px solid #1a2344;
        margin: 12px 0;
    }

    /* Modal */
    .ai-modal .modal-content {
        background: rgba(10, 14, 39, 0.95);
        border: 1px solid #1a2344;
        border-radius: 16px;
        backdrop-filter: blur(10px);
    }

    .ai-modal-header {
        border-bottom: 1px solid #1a2344;
        padding: 24px;
    }

    .ai-modal-title {
        color: white;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 12px;
        margin: 0;
    }

    .ai-modal-close {
        background: none;
        border: none;
        color: #a0aec0;
        font-size: 1.5rem;
        cursor: pointer;
        transition: color 0.3s ease;
    }

        .ai-modal-close:hover {
            color: #ff3366;
        }

    .ai-modal-body {
        padding: 24px;
        color: #a0aec0;
    }

        .ai-modal-body p {
            margin-bottom: 16px;
        }

    .ai-warning-box {
        background: rgba(255, 170, 0, 0.15);
        border: 1px solid rgba(255, 170, 0, 0.3);
        color: #ffaa00;
        padding: 16px;
        border-radius: 10px;
        display: flex;
