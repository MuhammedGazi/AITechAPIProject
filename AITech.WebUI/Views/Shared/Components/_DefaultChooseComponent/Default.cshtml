@model List<ResultChooseDto>
@*
     _DefaultChooseComponent
*@

<div class="container-fluid bg-primary feature pt-5">
    <div class="container pt-5">
        <div class="row g-5">
            <div class="col-lg-6 align-self-center mb-md-5 pb-md-5 wow fadeIn" data-wow-delay="0.3s">
                <div class="btn btn-sm border rounded-pill text-white px-3 mb-3">Neden Bizi Seçmelisiniz?</div>
                
                <h1 class="text-white mb-4">10 Yıllık Tecrübemizle Yapay Zeka Sektöründe Lideriz</h1>
                
                <p class="text-light mb-4">
                    Yapay zeka tabanlı çözümlerimizle iş süreçlerinizi hızlandırıyor, verimliliğinizi 
                    maksimum seviyeye çıkarıyoruz. Geleceğin teknolojisini bugünden kullanmaya başlayın.
                </p>

                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <div class="d-flex align-items-center text-white mb-3">
                            <div class="btn-sm-square bg-white text-primary rounded-circle me-3">
                                <i class="fa fa-check"></i>
                            </div>
                            <span>@item.Title</span> 
                        </div>
                    }
                }

                <div class="row g-4 pt-3">
                    <div class="col-sm-6">
                        <div class="d-flex rounded p-3" style="background: rgba(256, 256, 256, 0.1);">
                            <i class="fa fa-users fa-3x text-white"></i>
                            <div class="ms-3">
                                <h2 class="text-white mb-0" data-toggle="counter-up">9999</h2>
                                <p class="text-white mb-0">Mutlu Müşteri</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="d-flex rounded p-3" style="background: rgba(256, 256, 256, 0.1);">
                            <i class="fa fa-check fa-3x text-white"></i>
                            <div class="ms-3">
                                <h2 class="text-white mb-0" data-toggle="counter-up">9999</h2>
                                <p class="text-white mb-0">Tamamlanan Proje</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-6 align-self-end text-center text-md-end wow fadeIn" data-wow-delay="0.5s">
                <img class="img-fluid" src="~/AI-html-1.0.0/img/feature.png" alt="">
            </div>
        </div>
    </div>
</div>