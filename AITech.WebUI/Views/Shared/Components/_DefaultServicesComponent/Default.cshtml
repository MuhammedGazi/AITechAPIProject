@model List<ResultCategoryDto>
@*
   _DefaultServicesComponent
*@

<div class="container-fluid bg-light mt-5 py-5">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <div class="col-lg-5 wow fadeIn" data-wow-delay="0.1s">
                <div class="btn btn-sm border rounded-pill text-primary px-3 mb-3">Hizmetlerimiz</div>
                <h1 class="mb-4">İşletmeniz İçin Mükemmel Yapay Zeka Çözümleri</h1>
                <p class="mb-4">
                    Yapay zeka teknolojileri ile iş süreçlerinizi optimize ediyor, verimliliğinizi artırıyor ve 
                    geleceğin teknolojilerini bugünden size sunuyoruz. Profesyonel ekibimizle işletmenizi bir adım öne taşıyın.
                </p>
                <a class="btn btn-primary rounded-pill px-4" href="">Daha Fazla</a>
            </div>

            <div class="col-lg-7">
                <div class="row g-4">
                    
                    <div class="col-md-6">
                        <div class="row g-4">
                            @if (Model != null && Model.Any())
                            {
                                // Listenin ilk 2 elemanını al
                                @foreach (var item in Model.Take(2))
                                {
                                    <div class="col-12 wow fadeIn" data-wow-delay="0.1s">
                                        <div class="service-item d-flex flex-column justify-content-center text-center rounded">
                                            <div class="service-icon btn-square">
                                                <i class="fa fa-robot fa-2x"></i>
                                            </div>
                                            <h5 class="mb-3">@item.Name</h5>
                                            <p>@item.Description</p>
                                            <a class="btn px-3 mt-auto mx-auto" href="">Detaylar</a>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>

                    <div class="col-md-6 pt-md-4">
                        <div class="row g-4">
                            @if (Model != null && Model.Count > 2)
                            {
                                // İlk 2 elemanı atla, sonraki 2 elemanı al
                                @foreach (var item in Model.Skip(2).Take(2))
                                {
                                    <div class="col-12 wow fadeIn" data-wow-delay="0.5s">
                                        <div class="service-item d-flex flex-column justify-content-center text-center rounded">
                                            <div class="service-icon btn-square">
                                                <i class="fa fa-brain fa-2x"></i>
                                            </div>
                                            <h5 class="mb-3">@item.Name</h5>
                                            <p>@item.Description</p>
                                            <a class="btn px-3 mt-auto mx-auto" href="">Detaylar</a>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>